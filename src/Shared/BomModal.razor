@using ThePlanningBord.Models
@using ThePlanningBord.Services
@inject IInventoryService InventoryService
@inject NotificationService NotificationService

@if (Show)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center p-4 overflow-y-auto" aria-labelledby="modal-title-bom" role="dialog" aria-modal="true">
        <div class="fixed inset-0 transition-opacity" aria-hidden="true" @onclick="Close">
            <div class="absolute inset-0 bg-gray-500/75 dark:bg-gray-900/80"></div>
        </div>
        <div class="relative w-full max-w-2xl bg-white dark:bg-gray-800 rounded-lg shadow-xl overflow-hidden border border-gray-200 dark:border-gray-700 transform transition-all">
            <div class="bg-white dark:bg-gray-800 px-6 py-4 border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-900/50">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white" id="modal-title-bom">
                    Bill of Materials (Recipes)
                </h3>
            </div>
            <div class="p-6">
                @if (isLoading)
                {
                    <div class="flex justify-center py-8">
                        <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600"></div>
                        <span class="ml-3 text-gray-500 dark:text-gray-400">Loading...</span>
                    </div>
                }
                else
                {
                    <div class="grid grid-cols-1 gap-y-4 mb-6">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Recipe Name</label>
                            <input type="text" @bind="header.Name" class="block w-full border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700 text-gray-900 dark:text-white px-3 py-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Description</label>
                            <input type="text" @bind="header.Description" class="block w-full border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700 text-gray-900 dark:text-white px-3 py-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" />
                        </div>
                    </div>

                    <div class="border-t border-gray-200 dark:border-gray-700 pt-6">
                        <div class="flex items-center justify-between mb-4">
                            <h4 class="text-sm font-semibold text-gray-900 dark:text-white">Components</h4>
                            <button @onclick="AddLine" class="inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
                                + Add Component
                            </button>
                        </div>
                        <div class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                                <thead>
                                    <tr>
                                        <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Item</th>
                                        <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Qty</th>
                                        <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Unit</th>
                                        <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Wastage %</th>
                                        <th class="px-3 py-2 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                                    @foreach (var line in lines)
                                    {
                                        <tr class="hover:bg-gray-50 dark:hover:bg-gray-900/50 transition-colors">
                                            <td class="px-3 py-2">
                                                <select @bind="line.ComponentProductId" class="block w-full text-sm border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700 text-gray-900 dark:text-white px-2 py-1 focus:ring-blue-500 focus:border-blue-500 transition-colors">
                                                    <option value="0">Select Item</option>
                                                    @foreach (var p in allProducts)
                                                    {
                                                        <option value="@p.Id">[@(char.ToUpper(p.ItemType[0]) + p.ItemType.Substring(1))] @p.Name</option>
                                                    }
                                                </select>
                                            </td>
                                            <td class="px-3 py-2">
                                                <input type="number" @bind="line.Quantity" step="0.01" class="block w-20 text-sm border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700 text-gray-900 dark:text-white px-2 py-1 focus:ring-blue-500 focus:border-blue-500 transition-colors" />
                                            </td>
                                            <td class="px-3 py-2">
                                                <input type="text" @bind="line.Unit" class="block w-20 text-sm border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700 text-gray-900 dark:text-white px-2 py-1 focus:ring-blue-500 focus:border-blue-500 transition-colors" />
                                            </td>
                                            <td class="px-3 py-2">
                                                <input type="number" @bind="line.WastagePercentage" step="1" class="block w-20 text-sm border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700 text-gray-900 dark:text-white px-2 py-1 focus:ring-blue-500 focus:border-blue-500 transition-colors" />
                                            </td>
                                            <td class="px-3 py-2 text-right">
                                                <button @onclick="() => RemoveLine(line)" class="text-red-600 dark:text-red-400 hover:text-red-900 dark:hover:text-red-300 transition-colors">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            </div>
            <div class="bg-gray-50 dark:bg-gray-900/50 px-6 py-4 border-t border-gray-200 dark:border-gray-700 flex flex-row-reverse space-x-3 space-x-reverse">
                <button type="button" @onclick="Save" class="inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-blue-600 text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dark:bg-blue-500 dark:hover:bg-blue-600 transition-colors">
                    Save Recipe
                </button>
                <button type="button" @onclick="Close" class="inline-flex justify-center rounded-md border border-gray-300 dark:border-gray-600 shadow-sm px-4 py-2 bg-white dark:bg-gray-700 text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors">
                    Cancel
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool Show { get; set; }
    [Parameter] public EventCallback<bool> ShowChanged { get; set; }
    [Parameter] public int ProductId { get; set; }
    [Parameter] public EventCallback OnSaved { get; set; }

    private bool isLoading = false;
    private BomHeader header = new();
    private List<BomLine> lines = new();
    private List<Product> allProducts = new();

    protected override async Task OnParametersSetAsync()
    {
        if (Show && ProductId > 0)
        {
            isLoading = true;
            try 
            {
                // Load products for dropdown
                var productResult = await InventoryService.GetProductsAsync(null, 1, 1000);
                // Filter components: Exclude self, and only allow Ingredients or Goods (sub-assemblies)
                allProducts = productResult.Items
                    .Where(p => p.Id != ProductId && (p.ItemType == "ingredients" || p.ItemType == "goods"))
                    .ToList();

                // Load BOM
                var result = await InventoryService.GetProductBomAsync(ProductId);
                if (result.Header != null)
                {
                    header = result.Header;
                    lines = result.Lines;
                }
                else
                {
                    header = new BomHeader { ProductId = ProductId, Name = "New Recipe", IsActive = true };
                    lines = new List<BomLine>();
                }
            }
            catch (Exception ex)
            {
                NotificationService.ShowError("Failed to load BOM: " + ex.Message);
            }
            finally
            {
                isLoading = false;
            }
        }
    }

    private void AddLine()
    {
        lines.Add(new BomLine { ComponentProductId = 0, Quantity = 1, Unit = "pcs", WastagePercentage = 0 });
    }

    private void RemoveLine(BomLine line)
    {
        lines.Remove(line);
    }

    private async Task Save()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(header.Name))
            {
                NotificationService.ShowError("Recipe Name is required.");
                return;
            }

            header.ProductId = ProductId;
            await InventoryService.SaveBomAsync(header, lines);
            NotificationService.ShowSuccess("Recipe saved successfully.");
            await Close();
            await OnSaved.InvokeAsync();
        }
        catch (Exception ex)
        {
            NotificationService.ShowError("Failed to save BOM: " + ex.Message);
        }
    }

    private async Task Close()
    {
        Show = false;
        await ShowChanged.InvokeAsync(false);
    }
}
