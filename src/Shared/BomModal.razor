@using ThePlanningBord.Models
@using ThePlanningBord.Services
@inject IInventoryService InventoryService
@inject NotificationService NotificationService

@if (Show)
{
    <div class="fixed inset-0 z-50 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true" @onclick="Close"></div>
            <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
            <div class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-2xl sm:w-full sm:p-6">
                
                <div class="sm:flex sm:items-start">
                    <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left w-full">
                        <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
                            Bill of Materials (Recipes)
                        </h3>
                        <div class="mt-2">
                            @if (isLoading)
                            {
                                <p>Loading...</p>
                            }
                            else
                            {
                                <div class="mb-4">
                                    <label class="block text-sm font-medium text-gray-700">Recipe Name</label>
                                    <input type="text" @bind="header.Name" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                                    
                                    <label class="block text-sm font-medium text-gray-700 mt-2">Description</label>
                                    <input type="text" @bind="header.Description" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
                                </div>

                                <div class="border-t border-gray-200 pt-4">
                                    <h4 class="text-sm font-medium text-gray-900 mb-2">Components</h4>
                                    <table class="min-w-full divide-y divide-gray-200">
                                        <thead>
                                            <tr>
                                                <th class="text-left text-xs font-medium text-gray-500 uppercase">Item</th>
                                                <th class="text-left text-xs font-medium text-gray-500 uppercase">Qty</th>
                                                <th class="text-left text-xs font-medium text-gray-500 uppercase">Unit</th>
                                                <th class="text-left text-xs font-medium text-gray-500 uppercase">Wastage %</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody class="divide-y divide-gray-200">
                                            @foreach (var line in lines)
                                            {
                                                <tr>
                                                    <td class="py-2">
                                                        <select @bind="line.ComponentProductId" class="block w-full text-sm border-gray-300 rounded-md">
                                                            <option value="0">Select Item</option>
                                                            @foreach (var p in allProducts)
                                                            {
                                                                <option value="@p.Id">@p.Name</option>
                                                            }
                                                        </select>
                                                    </td>
                                                    <td class="py-2">
                                                        <input type="number" @bind="line.Quantity" step="0.01" class="block w-20 text-sm border-gray-300 rounded-md" />
                                                    </td>
                                                    <td class="py-2">
                                                        <input type="text" @bind="line.Unit" class="block w-20 text-sm border-gray-300 rounded-md" />
                                                    </td>
                                                    <td class="py-2">
                                                        <input type="number" @bind="line.WastagePercentage" step="1" class="block w-20 text-sm border-gray-300 rounded-md" />
                                                    </td>
                                                    <td class="py-2 text-right">
                                                        <button @onclick="() => RemoveLine(line)" class="text-red-600 hover:text-red-900">Remove</button>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                    <button @onclick="AddLine" class="mt-2 text-sm text-blue-600 hover:text-blue-900 font-medium">+ Add Component</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse">
                    <button type="button" @onclick="Save" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-blue-600 text-base font-medium text-white hover:bg-blue-700 focus:outline-none sm:ml-3 sm:w-auto sm:text-sm">
                        Save Recipe
                    </button>
                    <button type="button" @onclick="Close" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none sm:mt-0 sm:w-auto sm:text-sm">
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool Show { get; set; }
    [Parameter] public EventCallback<bool> ShowChanged { get; set; }
    [Parameter] public int ProductId { get; set; }
    [Parameter] public EventCallback OnSaved { get; set; }

    private bool isLoading = false;
    private BomHeader header = new();
    private List<BomLine> lines = new();
    private List<Product> allProducts = new();

    protected override async Task OnParametersSetAsync()
    {
        if (Show && ProductId > 0)
        {
            isLoading = true;
            try 
            {
                // Load products for dropdown
                var productResult = await InventoryService.GetProductsAsync(null, 1, 1000);
                allProducts = productResult.Items.Where(p => p.Id != ProductId).ToList(); // Exclude self

                // Load BOM
                var result = await InventoryService.GetProductBomAsync(ProductId);
                if (result.Header != null)
                {
                    header = result.Header;
                    lines = result.Lines;
                }
                else
                {
                    header = new BomHeader { ProductId = ProductId, Name = "New Recipe", IsActive = true };
                    lines = new List<BomLine>();
                }
            }
            catch (Exception ex)
            {
                NotificationService.ShowError("Failed to load BOM: " + ex.Message);
            }
            finally
            {
                isLoading = false;
            }
        }
    }

    private void AddLine()
    {
        lines.Add(new BomLine { ComponentProductId = 0, Quantity = 1, Unit = "pcs", WastagePercentage = 0 });
    }

    private void RemoveLine(BomLine line)
    {
        lines.Remove(line);
    }

    private async Task Save()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(header.Name))
            {
                NotificationService.ShowError("Recipe Name is required.");
                return;
            }

            header.ProductId = ProductId;
            await InventoryService.SaveBomAsync(header, lines);
            NotificationService.ShowSuccess("Recipe saved successfully.");
            await Close();
            await OnSaved.InvokeAsync();
        }
        catch (Exception ex)
        {
            NotificationService.ShowError("Failed to save BOM: " + ex.Message);
        }
    }

    private async Task Close()
    {
        Show = false;
        await ShowChanged.InvokeAsync(false);
    }
}
