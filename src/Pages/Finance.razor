@page "/finance"
@attribute [Authorize]
@inject IFinanceService FinanceService
@inject NotificationService NotificationService
@using ThePlanningBord.Models
@using ThePlanningBord.Services

<PageTitle>Finance - The Planning Bord</PageTitle>

<div class="flex flex-col h-full relative">
    <div class="mb-4">
        <nav class="flex space-x-4 border-b border-gray-200 dark:border-gray-700" aria-label="Tabs">
            <button @onclick='() => activeTab = "overview"' class="@(activeTab == "overview" ? "border-blue-500 text-blue-600 dark:text-blue-400" : "border-transparent text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300 hover:border-gray-300") whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">Overview</button>
            <button @onclick='() => activeTab = "payments"' class="@(activeTab == "payments" ? "border-blue-500 text-blue-600 dark:text-blue-400" : "border-transparent text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300 hover:border-gray-300") whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">Payments</button>
            <button @onclick='() => activeTab = "invoices"' class="@(activeTab == "invoices" ? "border-blue-500 text-blue-600 dark:text-blue-400" : "border-transparent text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300 hover:border-gray-300") whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">Invoices</button>
            <button @onclick='() => activeTab = "gl_accounts"' class="@(activeTab == "gl_accounts" ? "border-blue-500 text-blue-600 dark:text-blue-400" : "border-transparent text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300 hover:border-gray-300") whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">Chart of Accounts</button>
            <button @onclick='() => activeTab = "gl_entries"' class="@(activeTab == "gl_entries" ? "border-blue-500 text-blue-600 dark:text-blue-400" : "border-transparent text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300 hover:border-gray-300") whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">Journal Entries</button>
        </nav>
    </div>

    @if (activeTab == "overview")
    {
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700">
                <div class="flex items-center justify-between mb-4">
                    <h4 class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Net Income</h4>
                    <span class="p-2 bg-green-50 dark:bg-green-900/30 text-green-600 dark:text-green-400 rounded-full">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                    </span>
                </div>
                <div class="flex items-baseline space-x-2">
                    <span class="text-2xl font-bold text-gray-900 dark:text-white">@(overview?.NetIncome.ToString("C") ?? "$0.00")</span>
                    <span class="text-xs font-medium text-green-600 dark:text-green-400">+12.5%</span>
                </div>
                <div class="mt-4 w-full bg-gray-100 dark:bg-gray-700 rounded-full h-1.5">
                    <div class="bg-green-500 h-1.5 rounded-full" style="width: 70%"></div>
                </div>
            </div>

            <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700">
                <div class="flex items-center justify-between mb-4">
                    <h4 class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Total Revenue</h4>
                    <span class="p-2 bg-blue-50 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 rounded-full">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path></svg>
                    </span>
                </div>
                <div class="flex items-baseline space-x-2">
                    <span class="text-2xl font-bold text-gray-900 dark:text-white">@(overview?.TotalRevenue.ToString("C") ?? "$0.00")</span>
                    <span class="text-xs font-medium text-blue-600 dark:text-blue-400">+8.2%</span>
                </div>
                <div class="mt-4 w-full bg-gray-100 dark:bg-gray-700 rounded-full h-1.5">
                    <div class="bg-blue-500 h-1.5 rounded-full" style="width: 85%"></div>
                </div>
            </div>

            <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700">
                <div class="flex items-center justify-between mb-4">
                    <h4 class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Outstanding Invoices</h4>
                    <span class="p-2 bg-yellow-50 dark:bg-yellow-900/30 text-yellow-600 dark:text-yellow-400 rounded-full">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                    </span>
                </div>
                <div class="flex items-baseline space-x-2">
                    <span class="text-2xl font-bold text-gray-900 dark:text-white">@(overview?.OutstandingInvoices.ToString("C") ?? "$0.00")</span>
                    <span class="text-xs font-medium text-red-600 dark:text-red-400">-2.4%</span>
                </div>
                <div class="mt-4 w-full bg-gray-100 dark:bg-gray-700 rounded-full h-1.5">
                    <div class="bg-yellow-500 h-1.5 rounded-full" style="width: 45%"></div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <div class="bg-white dark:bg-gray-800 p-6 rounded-xl border border-gray-200 dark:border-gray-700 shadow-sm">
                <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-6">Revenue Trend</h3>
                <div class="h-64 flex items-end justify-between space-x-2 px-4 border-b border-gray-100 dark:border-gray-700 pb-2">
                    @if (overview?.RevenueTrend != null && overview.RevenueTrend.Any())
                    {
                        var maxVal = overview.RevenueTrend.Max(x => x.Value);
                        @foreach (var point in overview.RevenueTrend)
                        {
                            var height = maxVal > 0 ? (point.Value / maxVal) * 100 : 0;
                            <div class="flex-1 flex flex-col items-center group">
                                <div class="w-full bg-blue-500 group-hover:bg-blue-600 transition-all rounded-t-sm relative" style="height: @(height)%">
                                    <div class="absolute -top-8 left-1/2 -translate-x-1/2 bg-gray-800 dark:bg-gray-700 text-white text-[10px] py-1 px-2 rounded opacity-0 group-hover:opacity-100 transition-opacity">@point.Value.ToString("C0")</div>
                                </div>
                                <span class="text-[10px] text-gray-400 dark:text-gray-500 mt-2">@point.Label</span>
                            </div>
                        }
                    }
                    else
                    {
                        @for (int i = 0; i < 6; i++)
                        {
                            <div class="flex-1 flex flex-col items-center group">
                                <div class="w-full bg-gray-100 dark:bg-gray-700 rounded-t-sm" style="height: 10%"></div>
                                <span class="text-[10px] text-gray-400 dark:text-gray-500 mt-2">...</span>
                            </div>
                        }
                    }
                </div>
            </div>

            <div class="bg-white dark:bg-gray-800 p-6 rounded-xl border border-gray-200 dark:border-gray-700 shadow-sm">
                <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-6">Expense Allocation</h3>
                <div class="space-y-4">
                    @if (overview?.ExpenseAllocation != null && overview.ExpenseAllocation.Any())
                    {
                        var totalAlloc = overview.ExpenseAllocation.Sum(x => x.Value);
                        @foreach (var group in overview.ExpenseAllocation)
                        {
                            var percentage = totalAlloc > 0 ? (group.Value / totalAlloc) * 100 : 0;
                            <div>
                                <div class="flex justify-between text-sm mb-1">
                                    <span class="text-gray-600 dark:text-gray-400 capitalize">@group.Label</span>
                                    <span class="font-bold text-gray-900 dark:text-white">@group.Value.ToString("C")</span>
                                </div>
                                <div class="w-full bg-gray-100 dark:bg-gray-700 rounded-full h-2">
                                    <div class="bg-indigo-500 h-2 rounded-full" style="width: @(percentage)%"></div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-gray-400 dark:text-gray-500 text-center py-8 italic text-sm">No expense data available</div>
                    }
                </div>
            </div>
        </div>

        <div class="mt-8 bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 shadow-sm overflow-hidden">
            <div class="p-6 border-b border-gray-100 dark:border-gray-700 flex justify-between items-center">
                <h3 class="text-lg font-bold text-gray-900 dark:text-white">Recent Transactions</h3>
                <button @onclick='() => activeTab = "payments"' class="text-sm font-medium text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300">View all</button>
            </div>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                    <thead class="bg-gray-50 dark:bg-gray-900">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Transaction</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Date</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Amount</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Status</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-100 dark:divide-gray-700">
                        @if (payments != null && payments.Any())
                        {
                            @foreach (var p in payments.Take(5))
                            {
                                <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="flex-shrink-0 h-8 w-8 rounded-full @(p.PaymentType == "Income" ? "bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400" : "bg-red-100 dark:bg-red-900/30 text-red-600 dark:text-red-400") flex items-center justify-center">
                                                <i class="fas @(p.PaymentType == "Income" ? "fa-arrow-down" : "fa-arrow-up") text-xs"></i>
                                            </div>
                                            <div class="ml-4">
                                                <div class="text-sm font-medium text-gray-900 dark:text-white">@p.Description</div>
                                                <div class="text-xs text-gray-500 dark:text-gray-400">@p.PaymentMethod</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">@p.PaymentDate</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-bold @(p.PaymentType == "Income" ? "text-green-600 dark:text-green-400" : "text-gray-900 dark:text-white")">
                                        @(p.PaymentType == "Income" ? "+" : "-") @p.Amount.ToString("C")
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="px-2.5 py-0.5 rounded-full text-xs font-medium @(p.Status == "completed" ? "bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-100" : "bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-100")">
                                            @p.Status
                                        </span>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="px-6 py-12 text-center text-gray-400 dark:text-gray-500 italic text-sm">No recent transactions</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else if (activeTab == "payments")
    {
        <div class="flex justify-between items-center mb-6">
        <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-white">Payments</h3>
        <button @onclick="OpenAddModal" class="px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 transition-colors">
            ➕ New Payment
        </button>
    </div>

    <div class="flex-1 overflow-auto bg-white dark:bg-gray-800 shadow rounded-lg border border-gray-200 dark:border-gray-700">
            <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                <thead class="bg-gray-50 dark:bg-gray-900">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Type</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Amount</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Method</th>
                        <th class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
                    </tr>
                </thead>
                <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                    @if (payments == null) { <tr><td colspan="5" class="px-6 py-4 text-center dark:text-gray-400">Loading...</td></tr> }
                    else if (!payments.Any()) { <tr><td colspan="5" class="px-6 py-4 text-center dark:text-gray-400">No payments found.</td></tr> }
                    else
                    {
                        @foreach (var p in payments)
                        {
                            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">@p.PaymentType</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">@p.Amount.ToString("C") @p.Currency</td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @(p.Status == "completed" ? "bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-100" : "bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-100")">
                                        @p.Status
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">@p.PaymentMethod</td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <button @onclick="() => DeletePayment(p.Id ?? 0)" class="text-red-600 dark:text-red-400 hover:text-red-900 dark:hover:text-red-300">Delete</button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    }
    else if (activeTab == "invoices")
    {
        <div class="flex justify-between items-center mb-6">
        <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-white">Invoices</h3>
        <button @onclick="OpenAddInvoiceModal" class="px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 transition-colors">
            ➕ New Invoice
        </button>
    </div>

    <div class="flex-1 overflow-auto bg-white dark:bg-gray-800 shadow rounded-lg border border-gray-200 dark:border-gray-700">
            <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                <thead class="bg-gray-50 dark:bg-gray-900">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Date</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Customer</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Amount</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Due</th>
                    </tr>
                </thead>
                <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                    @if (invoices == null) { <tr><td colspan="5" class="px-6 py-4 text-center dark:text-gray-400">Loading...</td></tr> }
                    else if (!invoices.Any()) { <tr><td colspan="5" class="px-6 py-4 text-center dark:text-gray-400">No invoices found.</td></tr> }
                    else
                    {
                        @foreach (var inv in invoices)
                        {
                            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">@inv.InvoiceDate</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                                    <div class="font-medium">@inv.CustomerName</div>
                                    <div class="text-gray-500 dark:text-gray-400 text-xs">@inv.CustomerEmail</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">@((inv.TotalAmount + inv.TaxAmount).ToString("C")) @inv.Currency</td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @(inv.Status == "paid" ? "bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-100" : "bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-300")">
                                        @inv.Status
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">@inv.DueDate</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    }
    else if (activeTab == "gl_accounts")
    {
        <div class="flex justify-between items-center mb-6">
        <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-white">Chart of Accounts</h3>
        <button @onclick="OpenAddGlAccountModal" class="px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 transition-colors">
            ➕ New Account
        </button>
    </div>

    <div class="flex-1 overflow-auto bg-white dark:bg-gray-800 shadow rounded-lg border border-gray-200 dark:border-gray-700">
            <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                <thead class="bg-gray-50 dark:bg-gray-900">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Code</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Name</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Type</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Balance</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Active</th>
                    </tr>
                </thead>
                <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                    @if (glAccounts == null) { <tr><td colspan="5" class="px-6 py-4 text-center dark:text-gray-400">Loading...</td></tr> }
                    else if (!glAccounts.Any()) { <tr><td colspan="5" class="px-6 py-4 text-center dark:text-gray-400">No accounts found.</td></tr> }
                    else
                    {
                        @foreach (var acc in glAccounts.OrderBy(a => a.Code))
                        {
                            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white font-mono">@acc.Code</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">@acc.Name</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">@acc.AccountType</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">@acc.Balance.ToString("C")</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                                    @if (acc.IsActive) { <span class="text-green-600 dark:text-green-400">Yes</span> } else { <span class="text-red-600 dark:text-red-400">No</span> }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    }
    else if (activeTab == "gl_entries")
    {
        <div class="flex justify-between items-center mb-6">
        <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-white">Journal Entries</h3>
        <button @onclick="OpenAddGlEntryModal" class="px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 transition-colors">
            ➕ New Entry
        </button>
    </div>

    <div class="flex-1 overflow-auto bg-white dark:bg-gray-800 shadow rounded-lg border border-gray-200 dark:border-gray-700">
            <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                <thead class="bg-gray-50 dark:bg-gray-900">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">ID</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Date</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Description</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Reference</th>
                    </tr>
                </thead>
                <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                    @if (glEntries == null) { <tr><td colspan="4" class="px-6 py-4 text-center dark:text-gray-400">Loading...</td></tr> }
                    else if (!glEntries.Any()) { <tr><td colspan="4" class="px-6 py-4 text-center dark:text-gray-400">No entries found.</td></tr> }
                    else
                    {
                        @foreach (var entry in glEntries.OrderByDescending(e => e.TransactionDate))
                        {
                            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">@entry.Id</td>
