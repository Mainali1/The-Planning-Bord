@code {
    private string activeTab = "overview";
    private FinanceOverview? overview;
    private List<Payment>? payments;
    private List<Invoice>? invoices;
    private List<GlAccount>? glAccounts;
    private List<GlEntry>? glEntries;
    
    private bool showAddModal = false;
    private bool showAddInvoiceModal = false;
    private bool showAddGlAccountModal = false;
    private bool showAddGlEntryModal = false;
    
    private Payment newPayment = new Payment();
    private Invoice newInvoice = new Invoice();
    private GlAccount newGlAccount = new GlAccount();
    private GlEntry newGlEntry = new GlEntry();
    private GlEntryLine newGlEntryLine = new GlEntryLine();
    private List<GlEntryLine> currentGlEntryLines = new List<GlEntryLine>();

    protected override async Task OnInitializedAsync()
    {
        await LoadOverview();
        await LoadPayments();
        await LoadInvoices();
        await LoadGlAccounts();
        await LoadGlEntries();
    }

    private async Task LoadOverview()
    {
        try { overview = await FinanceService.GetFinanceOverviewAsync(); }
        catch (Exception ex) { NotificationService.ShowError("Failed to load finance overview: " + ex.Message); }
    }

    private async Task LoadPayments()
    {
        try { payments = await FinanceService.GetPaymentsAsync() ?? new List<Payment>(); }
        catch (Exception ex) { NotificationService.ShowError("Failed to load payments: " + ex.Message); payments = new List<Payment>(); }
    }
    
    private async Task LoadInvoices()
    {
        try { invoices = await FinanceService.GetInvoicesAsync() ?? new List<Invoice>(); }
        catch (Exception ex) { NotificationService.ShowError("Failed to load invoices: " + ex.Message); invoices = new List<Invoice>(); }
    }
    
    private async Task LoadGlAccounts()
    {
        try { glAccounts = await FinanceService.GetGlAccountsAsync() ?? new List<GlAccount>(); }
        catch (Exception ex) { NotificationService.ShowError("Failed to load GL accounts: " + ex.Message); glAccounts = new List<GlAccount>(); }
    }

    private async Task LoadGlEntries()
    {
        try { glEntries = await FinanceService.GetGlEntriesAsync(null, null) ?? new List<GlEntry>(); }
        catch (Exception ex) { NotificationService.ShowError("Failed to load GL entries: " + ex.Message); glEntries = new List<GlEntry>(); }
    }

    private void OpenAddModal()
    {
        newPayment = new Payment { PaymentDate = DateTime.Now.ToString("yyyy-MM-dd") };
        showAddModal = true;
    }
    
    private void OpenAddInvoiceModal()
    {
        newInvoice = new Invoice { InvoiceDate = DateTime.Now.ToString("yyyy-MM-dd"), Currency = "USD", Status = "draft", TaxRate = 0, TaxAmount = 0 };
        showAddInvoiceModal = true;
    }

    private void OpenAddGlAccountModal()
    {
        newGlAccount = new GlAccount { IsActive = true };
        showAddGlAccountModal = true;
    }

    private void OpenAddGlEntryModal()
    {
        newGlEntry = new GlEntry { TransactionDate = DateTime.Now.ToString("yyyy-MM-dd"), ReferenceType = "Manual" };
        currentGlEntryLines = new List<GlEntryLine>();
        newGlEntryLine = new GlEntryLine();
        showAddGlEntryModal = true;
    }

    private async Task SavePayment()
    {
        try
        {
            await FinanceService.AddPaymentAsync(newPayment);
            showAddModal = false;
            await LoadPayments();
            NotificationService.ShowSuccess("Payment added successfully.");
        }
        catch (Exception ex)
        {
            NotificationService.ShowError("Error saving payment: " + ex.Message);
        }
    }

    private async Task DeletePayment(int id)
    {
        try
        {
            await FinanceService.DeletePaymentAsync(id);
            await LoadPayments();
            NotificationService.ShowSuccess("Payment deleted.");
        }
        catch (Exception ex)
        {
            NotificationService.ShowError("Error deleting payment: " + ex.Message);
        }
    }
    
    private void OnInvoiceAmountChanged(ChangeEventArgs e)
    {
        if (double.TryParse(e.Value?.ToString(), out double val))
        {
            newInvoice.TotalAmount = val;
            CalculateInvoiceTax();
        }
    }

    private void OnInvoiceTaxRateChanged(ChangeEventArgs e)
    {
        if (double.TryParse(e.Value?.ToString(), out double val))
        {
            newInvoice.TaxRate = val;
            CalculateInvoiceTax();
        }
    }

    private void CalculateInvoiceTax()
    {
        newInvoice.TaxAmount = newInvoice.TotalAmount * (newInvoice.TaxRate / 100);
    }

    private void OnInvoiceDueChanged(ChangeEventArgs e)
    {
        newInvoice.DueDate = e.Value?.ToString();
    }

    private async Task SaveInvoice()
    {
        try
        {
            await FinanceService.CreateInvoiceAsync(newInvoice);
            showAddInvoiceModal = false;
            await LoadInvoices();
            NotificationService.ShowSuccess("Invoice created successfully.");
        }
        catch (Exception ex)
        {
            NotificationService.ShowError("Error creating invoice: " + ex.Message);
        }
    }

    private async Task SaveGlAccount()
    {
        try
        {
            await FinanceService.AddGlAccountAsync(newGlAccount);
            showAddGlAccountModal = false;
            await LoadGlAccounts();
            NotificationService.ShowSuccess("GL Account created.");
        }
        catch (Exception ex)
        {
            NotificationService.ShowError("Error creating GL Account: " + ex.Message);
        }
    }

    private void AddGlEntryLine()
    {
        if (newGlEntryLine.AccountId == 0) return;
        if (newGlEntryLine.Debit == 0 && newGlEntryLine.Credit == 0) return;

        currentGlEntryLines.Add(new GlEntryLine 
        {
            AccountId = newGlEntryLine.AccountId,
            Debit = newGlEntryLine.Debit,
            Credit = newGlEntryLine.Credit
        });

        newGlEntryLine = new GlEntryLine(); // Reset
    }

    private async Task SaveGlEntry()
    {
        if (currentGlEntryLines.Count < 2)
        {
            NotificationService.ShowError("Journal Entry must have at least 2 lines.");
            return;
        }

        if (Math.Abs(currentGlEntryLines.Sum(l => l.Debit) - currentGlEntryLines.Sum(l => l.Credit)) > 0.01)
        {
            NotificationService.ShowError("Journal Entry must balance.");
            return;
        }

        newGlEntry.Lines = currentGlEntryLines;

        try
        {
            await FinanceService.AddGlEntryAsync(newGlEntry);
            showAddGlEntryModal = false;
            await LoadGlEntries();
            await LoadGlAccounts(); // Balances updated
            NotificationService.ShowSuccess("Journal Entry posted.");
        }
        catch (Exception ex)
        {
            NotificationService.ShowError("Error posting Journal Entry: " + ex.Message);
        }
    }
}
