@page "/finance"
@attribute [Authorize]
@inject IFinanceService FinanceService
@inject NotificationService NotificationService
@using ThePlanningBord.Models
@using ThePlanningBord.Services

<PageTitle>Finance - The Planning Bord</PageTitle>

<div class="flex flex-col h-full relative">
    <div class="mb-4">
        <nav class="flex space-x-4 border-b border-gray-200" aria-label="Tabs">
            <button @onclick='() => activeTab = "payments"' class="@(activeTab == "payments" ? "border-blue-500 text-blue-600" : "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300") whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">Payments</button>
            <button @onclick='() => activeTab = "invoices"' class="@(activeTab == "invoices" ? "border-blue-500 text-blue-600" : "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300") whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">Invoices</button>
            <button @onclick='() => activeTab = "gl_accounts"' class="@(activeTab == "gl_accounts" ? "border-blue-500 text-blue-600" : "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300") whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">Chart of Accounts</button>
            <button @onclick='() => activeTab = "gl_entries"' class="@(activeTab == "gl_entries" ? "border-blue-500 text-blue-600" : "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300") whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">Journal Entries</button>
        </nav>
    </div>

    @if (activeTab == "payments")
    {
        <div class="flex justify-between items-center mb-6">
            <h3 class="text-lg font-medium leading-6 text-gray-900">Payments</h3>
            <button @onclick="OpenAddModal" class="px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                ➕ New Payment
            </button>
        </div>

        <div class="flex-1 overflow-auto bg-white shadow rounded-lg">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Method</th>
                        <th class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @if (payments == null) { <tr><td colspan="5" class="px-6 py-4 text-center">Loading...</td></tr> }
                    else if (!payments.Any()) { <tr><td colspan="5" class="px-6 py-4 text-center">No payments found.</td></tr> }
                    else
                    {
                        @foreach (var p in payments)
                        {
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@p.PaymentType</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@p.Amount.ToString("C") @p.Currency</td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @(p.Status == "completed" ? "bg-green-100 text-green-800" : "bg-yellow-100 text-yellow-800")">
                                        @p.Status
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@p.PaymentMethod</td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <button @onclick="() => DeletePayment(p.Id ?? 0)" class="text-red-600 hover:text-red-900">Delete</button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    }
    else if (activeTab == "invoices")
    {
        <div class="flex justify-between items-center mb-6">
            <h3 class="text-lg font-medium leading-6 text-gray-900">Invoices</h3>
            <button @onclick="OpenAddInvoiceModal" class="px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                ➕ New Invoice
            </button>
        </div>

        <div class="flex-1 overflow-auto bg-white shadow rounded-lg">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Due</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @if (invoices == null) { <tr><td colspan="5" class="px-6 py-4 text-center">Loading...</td></tr> }
                    else if (!invoices.Any()) { <tr><td colspan="5" class="px-6 py-4 text-center">No invoices found.</td></tr> }
                    else
                    {
                        @foreach (var inv in invoices)
                        {
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@inv.InvoiceDate</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    <div class="font-medium">@inv.CustomerName</div>
                                    <div class="text-gray-500 text-xs">@inv.CustomerEmail</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@((inv.TotalAmount + inv.TaxAmount).ToString("C")) @inv.Currency</td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @(inv.Status == "paid" ? "bg-green-100 text-green-800" : "bg-gray-100 text-gray-800")">
                                        @inv.Status
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@inv.DueDate</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    }
    else if (activeTab == "gl_accounts")
    {
        <div class="flex justify-between items-center mb-6">
            <h3 class="text-lg font-medium leading-6 text-gray-900">Chart of Accounts</h3>
            <button @onclick="OpenAddGlAccountModal" class="px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                ➕ New Account
            </button>
        </div>

        <div class="flex-1 overflow-auto bg-white shadow rounded-lg">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Code</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Balance</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Active</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @if (glAccounts == null) { <tr><td colspan="5" class="px-6 py-4 text-center">Loading...</td></tr> }
                    else if (!glAccounts.Any()) { <tr><td colspan="5" class="px-6 py-4 text-center">No accounts found.</td></tr> }
                    else
                    {
                        @foreach (var acc in glAccounts.OrderBy(a => a.Code))
                        {
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-mono">@acc.Code</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@acc.Name</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@acc.AccountType</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@acc.Balance.ToString("C")</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @if (acc.IsActive) { <span class="text-green-600">Yes</span> } else { <span class="text-red-600">No</span> }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    }
    else if (activeTab == "gl_entries")
    {
         <div class="flex justify-between items-center mb-6">
            <h3 class="text-lg font-medium leading-6 text-gray-900">Journal Entries</h3>
            <button @onclick="OpenAddGlEntryModal" class="px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                ➕ New Entry
            </button>
        </div>

        <div class="flex-1 overflow-auto bg-white shadow rounded-lg">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Reference</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @if (glEntries == null) { <tr><td colspan="4" class="px-6 py-4 text-center">Loading...</td></tr> }
                    else if (!glEntries.Any()) { <tr><td colspan="4" class="px-6 py-4 text-center">No entries found.</td></tr> }
                    else
                    {
                        @foreach (var entry in glEntries.OrderByDescending(e => e.TransactionDate))
                        {
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@entry.Id</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@entry.TransactionDate</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@entry.Description</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@entry.ReferenceType #@entry.ReferenceId</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@if (showAddModal)
{
    <div class="fixed z-10 inset-0 overflow-y-auto">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 transition-opacity" @onclick="() => showAddModal = false"><div class="absolute inset-0 bg-gray-500 opacity-75"></div></div>
            <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <h3 class="text-lg leading-6 font-medium text-gray-900">New Payment</h3>
                    <div class="mt-4 grid grid-cols-1 gap-y-4">
                        <select @bind="newPayment.PaymentType" class="block w-full border-gray-300 rounded-md shadow-sm">
                            <option value="expense">Expense</option>
                            <option value="income">Income</option>
                            <option value="salary">Salary</option>
                        </select>
                        <input type="number" @bind="newPayment.Amount" step="0.01" placeholder="Amount" class="block w-full border-gray-300 rounded-md shadow-sm" />
                        <select @bind="newPayment.Status" class="block w-full border-gray-300 rounded-md shadow-sm">
                            <option value="pending">Pending</option>
                            <option value="completed">Completed</option>
                            <option value="failed">Failed</option>
                        </select>
                        <input type="text" @bind="newPayment.Description" placeholder="Description" class="block w-full border-gray-300 rounded-md shadow-sm" />
                    </div>
                </div>
                <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                    <button type="button" @onclick="SavePayment" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-blue-600 text-base font-medium text-white hover:bg-blue-700 sm:ml-3 sm:w-auto sm:text-sm">Save</button>
                    <button type="button" @onclick="() => showAddModal = false" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}

@if (showAddInvoiceModal)
{
    <div class="fixed z-10 inset-0 overflow-y-auto">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 transition-opacity" @onclick="() => showAddInvoiceModal = false"><div class="absolute inset-0 bg-gray-500 opacity-75"></div></div>
            <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <h3 class="text-lg leading-6 font-medium text-gray-900">New Invoice</h3>
                    <div class="mt-4 grid grid-cols-1 gap-y-4">
                        <input type="text" @bind="newInvoice.CustomerName" placeholder="Customer Name" class="block w-full border-gray-300 rounded-md shadow-sm" />
                        <input type="email" @bind="newInvoice.CustomerEmail" placeholder="Customer Email" class="block w-full border-gray-300 rounded-md shadow-sm" />
                        <input type="number" value="@newInvoice.TotalAmount" step="0.01" placeholder="Subtotal" class="block w-full border-gray-300 rounded-md shadow-sm" @oninput="OnInvoiceAmountChanged" />
                        <input type="number" value="@newInvoice.TaxRate" step="0.01" placeholder="Tax Rate (%)" class="block w-full border-gray-300 rounded-md shadow-sm" @oninput="OnInvoiceTaxRateChanged" />
                        <div class="text-sm text-gray-600">Tax: @newInvoice.TaxAmount.ToString("C") @newInvoice.Currency</div>
                        <div class="text-sm text-gray-900 font-medium">Total: @(newInvoice.TotalAmount + newInvoice.TaxAmount).ToString("C") @newInvoice.Currency</div>
                        <input type="date" value="@newInvoice.DueDate" placeholder="Due Date" class="block w-full border-gray-300 rounded-md shadow-sm" @onchange="OnInvoiceDueChanged" />
                        <select @bind="newInvoice.Status" class="block w-full border-gray-300 rounded-md shadow-sm">
                            <option value="draft">Draft</option>
                            <option value="sent">Sent</option>
                            <option value="paid">Paid</option>
                        </select>
                    </div>
                </div>
                <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                    <button type="button" @onclick="SaveInvoice" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-blue-600 text-base font-medium text-white hover:bg-blue-700 sm:ml-3 sm:w-auto sm:text-sm">Save</button>
                    <button type="button" @onclick="() => showAddInvoiceModal = false" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}

@if (showAddGlAccountModal)
{
    <div class="fixed z-10 inset-0 overflow-y-auto">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 transition-opacity" @onclick="() => showAddGlAccountModal = false"><div class="absolute inset-0 bg-gray-500 opacity-75"></div></div>
            <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <h3 class="text-lg leading-6 font-medium text-gray-900">New GL Account</h3>
                    <div class="mt-4 grid grid-cols-1 gap-y-4">
                        <input type="text" @bind="newGlAccount.Code" placeholder="Code (e.g. 1000)" class="block w-full border-gray-300 rounded-md shadow-sm" />
                        <input type="text" @bind="newGlAccount.Name" placeholder="Account Name" class="block w-full border-gray-300 rounded-md shadow-sm" />
                        <select @bind="newGlAccount.AccountType" class="block w-full border-gray-300 rounded-md shadow-sm">
                            <option value="Asset">Asset</option>
                            <option value="Liability">Liability</option>
                            <option value="Equity">Equity</option>
                            <option value="Revenue">Revenue</option>
                            <option value="Expense">Expense</option>
                        </select>
                    </div>
                </div>
                <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                    <button type="button" @onclick="SaveGlAccount" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-blue-600 text-base font-medium text-white hover:bg-blue-700 sm:ml-3 sm:w-auto sm:text-sm">Save</button>
                    <button type="button" @onclick="() => showAddGlAccountModal = false" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}

@if (showAddGlEntryModal)
{
    <div class="fixed z-10 inset-0 overflow-y-auto">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 transition-opacity" @onclick="() => showAddGlEntryModal = false"><div class="absolute inset-0 bg-gray-500 opacity-75"></div></div>
            <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-2xl sm:w-full">
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <h3 class="text-lg leading-6 font-medium text-gray-900">New Journal Entry</h3>
                    <div class="mt-4 grid grid-cols-1 gap-y-4">
                        <input type="date" value="@newGlEntry.TransactionDate" @onchange="@(e => newGlEntry.TransactionDate = e.Value?.ToString())" class="block w-full border-gray-300 rounded-md shadow-sm" />
                        <input type="text" @bind="newGlEntry.Description" placeholder="Description" class="block w-full border-gray-300 rounded-md shadow-sm" />
                        
                        <div class="border-t border-gray-200 pt-4 mt-2">
                            <h4 class="text-sm font-medium text-gray-900 mb-2">Lines</h4>
                            <div class="flex space-x-2 mb-2">
                                <select @bind="newGlEntryLine.AccountId" class="block w-1/3 border-gray-300 rounded-md shadow-sm text-sm">
                                    <option value="0">Select Account...</option>
                                    @if (glAccounts != null)
                                    {
                                        @foreach (var acc in glAccounts)
                                        {
                                            <option value="@acc.Id">@acc.Code - @acc.Name</option>
                                        }
                                    }
                                </select>
                                <input type="number" @bind="newGlEntryLine.Debit" placeholder="Debit" class="block w-1/4 border-gray-300 rounded-md shadow-sm text-sm" />
                                <input type="number" @bind="newGlEntryLine.Credit" placeholder="Credit" class="block w-1/4 border-gray-300 rounded-md shadow-sm text-sm" />
                                <button type="button" @onclick="AddGlEntryLine" class="px-3 py-2 bg-blue-600 text-white rounded-md text-sm">Add</button>
                            </div>
                            
                            <table class="min-w-full divide-y divide-gray-200 mb-2">
                                <thead>
                                    <tr>
                                        <th class="text-left text-xs font-medium text-gray-500">Account</th>
                                        <th class="text-right text-xs font-medium text-gray-500">Debit</th>
                                        <th class="text-right text-xs font-medium text-gray-500">Credit</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var line in currentGlEntryLines)
                                    {
                                        <tr>
                                            <td class="text-sm">@(glAccounts?.FirstOrDefault(a => a.Id == line.AccountId)?.Name ?? line.AccountId.ToString())</td>
                                            <td class="text-sm text-right">@line.Debit.ToString("C")</td>
                                            <td class="text-sm text-right">@line.Credit.ToString("C")</td>
                                            <td class="text-right"><button @onclick="() => currentGlEntryLines.Remove(line)" class="text-red-600 text-xs">Remove</button></td>
                                        </tr>
                                    }
                                    <tr class="font-bold bg-gray-50">
                                        <td class="text-sm">Total</td>
                                        <td class="text-sm text-right">@currentGlEntryLines.Sum(l => l.Debit).ToString("C")</td>
                                        <td class="text-sm text-right">@currentGlEntryLines.Sum(l => l.Credit).ToString("C")</td>
                                        <td></td>
                                    </tr>
                                </tbody>
                            </table>
                            @if (Math.Abs(currentGlEntryLines.Sum(l => l.Debit) - currentGlEntryLines.Sum(l => l.Credit)) > 0.01)
                            {
                                <div class="text-red-600 text-sm font-bold">Entries must balance! Difference: @((currentGlEntryLines.Sum(l => l.Debit) - currentGlEntryLines.Sum(l => l.Credit)).ToString("C"))</div>
                            }
                        </div>
                    </div>
                </div>
                <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                    <button type="button" @onclick="SaveGlEntry" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-blue-600 text-base font-medium text-white hover:bg-blue-700 sm:ml-3 sm:w-auto sm:text-sm" disabled="@(Math.Abs(currentGlEntryLines.Sum(l => l.Debit) - currentGlEntryLines.Sum(l => l.Credit)) > 0.01)">Save</button>
                    <button type="button" @onclick="() => showAddGlEntryModal = false" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private string activeTab = "payments";
    private List<Payment>? payments;
    private List<Invoice>? invoices;
    private List<GlAccount>? glAccounts;
    private List<GlEntry>? glEntries;
    
    private bool showAddModal = false;
    private bool showAddInvoiceModal = false;
    private bool showAddGlAccountModal = false;
    private bool showAddGlEntryModal = false;
    
    private Payment newPayment = new Payment();
    private Invoice newInvoice = new Invoice();
    private GlAccount newGlAccount = new GlAccount();
    private GlEntry newGlEntry = new GlEntry();
    private GlEntryLine newGlEntryLine = new GlEntryLine();
    private List<GlEntryLine> currentGlEntryLines = new List<GlEntryLine>();

    protected override async Task OnInitializedAsync()
    {
        await LoadPayments();
        await LoadInvoices();
        await LoadGlAccounts();
        await LoadGlEntries();
    }

    private async Task LoadPayments()
    {
        try { payments = await FinanceService.GetPaymentsAsync() ?? new List<Payment>(); }
