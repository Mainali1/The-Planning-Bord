@page "/sales-orders"
@attribute [Authorize(Roles = "CEO,Finance,Inventory,Manager")]
@inject ISalesService SalesService
@inject IClientService ClientService
@inject IInventoryService InventoryService
@inject IBusinessConfigurationService BusinessConfigurationService
@inject NotificationService NotificationService
@using ThePlanningBord.Models
@using System.Text.Json

<PageTitle>Sales Orders - The Planning Bord</PageTitle>

<div class="flex flex-col h-full relative">
    <div class="flex justify-between items-center mb-6">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Sales Orders</h3>
        <button @onclick="OpenCreateModal" class="flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
            âž• New Sales Order
        </button>
    </div>

    <div class="flex-1 overflow-auto bg-white shadow rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">SO #</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Client</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @if (salesOrders == null) { <tr><td colspan="6" class="px-6 py-4 text-center">Loading...</td></tr> }
                else if (!salesOrders.Any()) { <tr><td colspan="6" class="px-6 py-4 text-center">No sales orders found.</td></tr> }
                else
                {
                    @foreach (var so in salesOrders)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">SO-@so.Id</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@so.OrderDate</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                @(clients.FirstOrDefault(c => c.Id == so.ClientId)?.CompanyName ?? $"ID: {so.ClientId}")
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@so.TotalAmount.ToString("C")</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @GetStatusClass(so.Status ?? "")">
                                    @so.Status
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <button @onclick="() => ViewOrder(so)" class="text-blue-600 hover:text-blue-900 mr-3">View</button>
                                @if (so.Status?.Equals("Draft", StringComparison.OrdinalIgnoreCase) == true || so.Status?.Equals("Confirmed", StringComparison.OrdinalIgnoreCase) == true)
                                {
                                    <button @onclick="() => ShipOrder(so)" class="text-green-600 hover:text-green-900 mr-3">Ship</button>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@if (showModal)
{
    <div class="fixed z-10 inset-0 overflow-y-auto">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 transition-opacity" aria-hidden="true" @onclick="CloseModal">
                <div class="absolute inset-0 bg-gray-500 opacity-75"></div>
            </div>
            <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-4xl sm:w-full">
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <h3 class="text-lg leading-6 font-medium text-gray-900">@(isViewing ? $"Sales Order SO-{editingSo.Id}" : "New Sales Order")</h3>
                    
                    <div class="mt-4 grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Client</label>
                            @if (isViewing)
                            {
                                <div class="mt-1 text-sm text-gray-900">@(clients.FirstOrDefault(c => c.Id == editingSo.ClientId)?.CompanyName)</div>
                            }
                            else
                            {
                                <select @bind="editingSo.ClientId" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm">
                                    <option value="0">-- Select Client --</option>
                                    @foreach (var c in clients)
                                    {
                                        <option value="@c.Id">@c.CompanyName</option>
                                    }
                                </select>
                            }
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Order Date</label>
                             @if (isViewing)
                            {
                                <div class="mt-1 text-sm text-gray-900">@editingSo.OrderDate</div>
                            }
                            else
                            {
                                <input type="date" value="@editingSo.OrderDate" @onchange="@(e => editingSo.OrderDate = e.Value?.ToString())" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" />
                            }
                        </div>
                        <div class="col-span-2">
                            <label class="block text-sm font-medium text-gray-700">Notes</label>
                             @if (isViewing)
                            {
                                <div class="mt-1 text-sm text-gray-900">@editingSo.Notes</div>
                            }
                            else
                            {
                                <textarea @bind="editingSo.Notes" rows="2" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm"></textarea>
                            }
                        </div>
                    </div>

                    <!-- Lines -->
                    <div class="mt-6 border-t border-gray-200 pt-4">
                        <h4 class="text-sm font-medium text-gray-900 mb-2">Order Items</h4>
                        
                        @if (!isViewing)
                        {
                            <div class="flex space-x-2 mb-4 p-4 bg-gray-50 rounded-md items-end">
                                <div class="w-32">
                                    <label class="block text-xs font-medium text-gray-500">Type</label>
                                    <select @bind="lineItemType" class="block w-full border-gray-300 rounded-md shadow-sm text-sm">
                                        <option value="Product">Product</option>
                                        <option value="Service">Service</option>
                                    </select>
                                </div>
                                <div class="flex-1">
                                    <label class="block text-xs font-medium text-gray-500">Item</label>
                                    @if (lineItemType == "Product")
                                    {
                                        <select @bind="newLine.ProductId" class="block w-full border-gray-300 rounded-md shadow-sm text-sm" @oninput="OnProductSelect">
                                            <option value="0">Select Product...</option>
                                            @foreach (var p in products)
                                            {
                                                <option value="@p.Id">@p.Name (Price: @p.UnitPrice.ToString("C"))</option>
                                            }
                                        </select>
                                    }
                                    else
                                    {
                                        <select @bind="newLine.ServiceId" class="block w-full border-gray-300 rounded-md shadow-sm text-sm" @oninput="OnServiceSelect">
                                            <option value="0">Select Service...</option>
                                            @foreach (var s in services)
                                            {
                                                <option value="@s.Id">@s.Name (Price: @s.UnitPrice.ToString("C"))</option>
                                            }
                                        </select>
                                    }
                                </div>
                                <div class="w-24">
                                    <label class="block text-xs font-medium text-gray-500">Qty</label>
                                    <input type="number" @bind="newLine.Quantity" class="block w-full border-gray-300 rounded-md shadow-sm text-sm" />
                                </div>
                                <div class="w-32">
                                    <label class="block text-xs font-medium text-gray-500">Unit Price</label>
                                    <input type="number" step="0.01" @bind="newLine.UnitPrice" class="block w-full border-gray-300 rounded-md shadow-sm text-sm" />
                                </div>
                                <div>
                                    <button type="button" @onclick="AddLine" class="px-3 py-2 bg-blue-600 text-white rounded-md text-sm hover:bg-blue-700">Add</button>
                                </div>
                            </div>
                        }

                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500">Item</th>
                                    <th class="px-4 py-2 text-right text-xs font-medium text-gray-500">Qty</th>
                                    <th class="px-4 py-2 text-right text-xs font-medium text-gray-500">Unit Price</th>
                                    <th class="px-4 py-2 text-right text-xs font-medium text-gray-500">Total</th>
                                    @if (!isViewing) { <th class="px-4 py-2"></th> }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var line in currentLines)
                                {
                                    <tr>
                                        <td class="px-4 py-2 text-sm">
                                            @if (line.ProductId.HasValue && line.ProductId > 0)
                                            {
                                                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800 mr-2">Product</span>
                                                @(products.FirstOrDefault(p => p.Id == line.ProductId)?.Name ?? "Unknown Product")
                                            }
                                            else if (line.ServiceId.HasValue && line.ServiceId > 0)
                                            {
                                                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800 mr-2">Service</span>
                                                @(services.FirstOrDefault(s => s.Id == line.ServiceId)?.Name ?? "Unknown Service")
                                            }
                                        </td>
                                        <td class="px-4 py-2 text-sm text-right">@line.Quantity</td>
                                        <td class="px-4 py-2 text-sm text-right">@line.UnitPrice.ToString("C")</td>
                                        <td class="px-4 py-2 text-sm text-right">@line.TotalPrice.ToString("C")</td>
                                        @if (!isViewing)
                                        {
                                            <td class="px-4 py-2 text-center">
                                                <button @onclick="() => RemoveLine(line)" class="text-red-600 hover:text-red-900 text-sm">Remove</button>
                                            </td>
                                        }
                                    </tr>
                                }
                                <tr class="bg-gray-50 font-bold">
                                    <td colspan="3" class="px-4 py-2 text-right text-sm">Total:</td>
                                    <td class="px-4 py-2 text-right text-sm">@currentLines.Sum(l => l.TotalPrice).ToString("C")</td>
                                    @if (!isViewing) { <td></td> }
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                    @if (!isViewing)
                    {
                        <button type="button" @onclick="SaveOrder" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-indigo-600 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none sm:ml-3 sm:w-auto sm:text-sm">
                            Create Order
                        </button>
                    }
                    <button type="button" @onclick="CloseModal" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<SalesOrder>? salesOrders;
    private List<Client> clients = new();
    private List<Product> products = new();
    private List<Service> services = new();
    
    private bool showModal = false;
    private bool isViewing = false;
    private SalesOrder editingSo = new();
    private List<SalesOrderLine> currentLines = new();
    private SalesOrderLine newLine = new();
    private string lineItemType = "Product";

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try 
        {
            salesOrders = await SalesService.GetSalesOrdersAsync();
            clients = await ClientService.GetClientsAsync();
            var pagedProducts = await InventoryService.GetProductsAsync();
            products = pagedProducts.Items;
            services = await BusinessConfigurationService.GetServicesAsync();
        }
        catch (Exception ex)
        {
            NotificationService.ShowError("Failed to load data: " + ex.Message);
        }
    }

    private string GetStatusClass(string status)
    {
        return status?.ToLower() switch
        {
            "draft" => "bg-gray-100 text-gray-800",
            "confirmed" => "bg-blue-100 text-blue-800",
            "shipped" => "bg-green-100 text-green-800",
            "invoiced" => "bg-purple-100 text-purple-800",
            "cancelled" => "bg-red-100 text-red-800",
            _ => "bg-gray-100 text-gray-800"
        };
    }

    private void OpenCreateModal()
    {
        editingSo = new SalesOrder 
        { 
            OrderDate = DateTime.Now.ToString("yyyy-MM-dd"), 
            Currency = "USD",
            Status = "Draft"
        };
        currentLines = new List<SalesOrderLine>();
        newLine = new SalesOrderLine();
        isViewing = false;
        showModal = true;
    }

    private async Task ViewOrder(SalesOrder so)
    {
        editingSo = so;
        isViewing = true;
        showModal = true;
        
        try
        {
            var fullSo = await SalesService.GetSalesOrderAsync(so.Id ?? 0);
            if (fullSo != null)
            {
                editingSo = fullSo;
                currentLines = fullSo.Lines ?? new List<SalesOrderLine>();
            }
            else
            {
                currentLines = new List<SalesOrderLine>();
            }
        }
        catch (Exception ex)
        {
             NotificationService.ShowError("Failed to load order details: " + ex.Message);
             currentLines = new List<SalesOrderLine>();
        }
    }

    private void CloseModal()
    {
        showModal = false;
    }

    private void OnProductSelect(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int productId))
        {
            var product = products.FirstOrDefault(p => p.Id == productId);
            if (product != null)
            {
                newLine.UnitPrice = product.UnitPrice;
            }
        }
    }

    private void OnServiceSelect(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int serviceId))
        {
            var service = services.FirstOrDefault(s => s.Id == serviceId);
            if (service != null)
            {
                newLine.UnitPrice = service.UnitPrice;
            }
        }
    }

    private void AddLine()
    {
        if (lineItemType == "Product")
        {
             if (newLine.ProductId == 0 || newLine.Quantity <= 0) return;
             newLine.ServiceId = null; // Ensure no service ID
             
             var product = products.FirstOrDefault(p => p.Id == newLine.ProductId);
             if (product == null) return;
        }
        else
        {
             if (newLine.ServiceId == 0 || newLine.Quantity <= 0) return;
             newLine.ProductId = null; // Ensure no product ID
             
             var service = services.FirstOrDefault(s => s.Id == newLine.ServiceId);
             if (service == null) return;
        }

        newLine.TotalPrice = newLine.Quantity * newLine.UnitPrice;
        currentLines.Add(newLine);
        newLine = new SalesOrderLine(); // Reset
    }

    private void RemoveLine(SalesOrderLine line)
    {
        currentLines.Remove(line);
    }

    private async Task SaveOrder()
    {
        if (editingSo.ClientId == 0)
        {
            NotificationService.ShowError("Please select a client.");
            return;
        }

        if (!currentLines.Any())
        {
            NotificationService.ShowError("Please add at least one item.");
            return;
        }

        try
        {
            editingSo.Lines = currentLines;
            await SalesService.CreateSalesOrderAsync(editingSo);
            NotificationService.ShowSuccess("Sales Order created successfully.");
            showModal = false;
            await LoadData();
        }
        catch (Exception ex)
        {
            NotificationService.ShowError("Failed to create sales order: " + ex.Message);
        }
    }

    private async Task ShipOrder(SalesOrder so)
    {
        if (!so.Id.HasValue) return;
        
        try
        {
            await SalesService.ShipSalesOrderAsync(so.Id.Value);
            NotificationService.ShowSuccess($"Sales Order SO-{so.Id} shipped successfully.");
            await LoadData();
        }
        catch (Exception ex)
        {
            NotificationService.ShowError($"Failed to ship order: {ex.Message}");
        }
    }
}
