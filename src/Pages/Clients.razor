@page "/clients"
@attribute [Authorize(Roles = "CEO,Manager")]
@inject IClientService ClientService
@inject IBusinessConfigurationService BusinessConfigurationService
@inject NotificationService NotificationService
@inject IJSRuntime JSRuntime

<PageTitle>Clients - Planning Bord</PageTitle>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-lg border border-gray-200 dark:border-gray-700">
        <div class="px-4 py-5 sm:px-6 flex justify-between items-center">
            <div>
                <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white">Client Management</h3>
                <p class="mt-1 max-w-2xl text-sm text-gray-500 dark:text-gray-400">Manage your client relationships and contact information.</p>
            </div>
            <button @onclick="ShowAddModal" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium">
                Add Client
            </button>
        </div>

        @if (isLoading)
        {
            <div class="px-4 py-5 sm:px-6">
                <div class="flex justify-center items-center">
                    <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600"></div>
                    <span class="ml-2 text-gray-600 dark:text-gray-400">Loading clients...</span>
                </div>
            </div>
        }
        else if (clients.Count == 0)
        {
            <div class="px-4 py-5 sm:px-6 text-center">
                <p class="text-gray-500 dark:text-gray-400">No clients found. Add your first client to get started.</p>
            </div>
        }
        else
        {
            <div class="border-t border-gray-200 dark:border-gray-700">
                <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                    <thead class="bg-gray-50 dark:bg-gray-900">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Company</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Contact</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Email</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Phone</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Industry</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Status</th>
                            <th scope="col" class="relative px-6 py-3"></th>
                        </tr>
                    </thead>
                    <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                        @foreach (var client in clients)
                        {
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-medium text-gray-900 dark:text-white">@client.CompanyName</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-500 dark:text-gray-400">@client.ContactName</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-500 dark:text-gray-400">@client.Email</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-500 dark:text-gray-400">@client.Phone</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-500 dark:text-gray-400">@client.Industry</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @if (client.Status == "active")
                                    {
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-100">Active</span>
                                    }
                                    else
                                    {
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300">@client.Status</span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <button @onclick="() => EditClient(client)" class="text-blue-600 dark:text-blue-400 hover:text-blue-900 dark:hover:text-blue-300 mr-3">Edit</button>
                                    <button @onclick="() => DeleteClient(client)" class="text-red-600 dark:text-red-400 hover:text-red-900 dark:hover:text-red-300">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<!-- Add/Edit Modal -->
@if (showModal)
{
    <div class="fixed z-10 inset-0 overflow-y-auto" role="dialog" aria-modal="true" aria-labelledby="modal-title">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 transition-opacity" @onclick="CloseModal">
                <div class="absolute inset-0 bg-gray-500/75 dark:bg-gray-900/80"></div>
            </div>
            <span class="hidden sm:inline-block sm:align-middle sm:h-screen"></span>&#8203;
            <div class="inline-block align-bottom bg-white dark:bg-gray-800 rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full border border-gray-200 dark:border-gray-700">
                <div class="bg-white dark:bg-gray-800 px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white mb-4" id="modal-title">@(isEditing ? "Edit Client" : "Add Client")</h3>
                    <div class="space-y-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Company Name</label>
                            <input @bind="currentClient.CompanyName" class="mt-1 block w-full border border-gray-300 dark:border-gray-600 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Contact Name</label>
                            <input @bind="currentClient.ContactName" class="mt-1 block w-full border border-gray-300 dark:border-gray-600 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email</label>
                            <input @bind="currentClient.Email" type="email" class="mt-1 block w-full border border-gray-300 dark:border-gray-600 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Phone</label>
                            <input @bind="currentClient.Phone" class="mt-1 block w-full border border-gray-300 dark:border-gray-600 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Address</label>
                            <textarea @bind="currentClient.Address" class="mt-1 block w-full border border-gray-300 dark:border-gray-600 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white" rows="3"></textarea>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Industry</label>
                            <input @bind="currentClient.Industry" class="mt-1 block w-full border border-gray-300 dark:border-gray-600 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Status</label>
                            <select @bind="currentClient.Status" class="mt-1 block w-full border border-gray-300 dark:border-gray-600 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
                                <option value="active">Active</option>
                                <option value="inactive">Inactive</option>
                                <option value="prospect">Prospect</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Payment Terms</label>
                            <input @bind="currentClient.PaymentTerms" class="mt-1 block w-full border border-gray-300 dark:border-gray-600 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Credit Limit</label>
                            <input @bind="currentClient.CreditLimit" type="number" step="0.01" class="mt-1 block w-full border border-gray-300 dark:border-gray-600 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Annual Contract Value</label>
                            <input @bind="currentClient.AnnualContractValue" type="number" step="0.01" class="mt-1 block w-full border border-gray-300 dark:border-gray-600 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Primary Products Purchased</label>
                            <input @bind="currentClient.PrimaryProductsPurchased" class="mt-1 block w-full border border-gray-300 dark:border-gray-600 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Subscribed Services</label>
                            <div class="mt-2 space-y-2 max-h-40 overflow-y-auto border border-gray-300 dark:border-gray-600 rounded-md p-2 bg-white dark:bg-gray-700">
                                @if (availableServices != null)
                                {
                                    @foreach (var service in availableServices)
                                    {
                                        <div class="flex items-center">
                                            <input type="checkbox" id="service-@service.Id" 
                                                   checked="@(currentClient.SubscribedServiceIds?.Contains(service.Id ?? 0) ?? false)"
                                                   @onchange="@(e => ToggleService(service.Id ?? 0, e.Value is bool b && b))"
                                                   class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 dark:border-gray-600 rounded bg-white dark:bg-gray-700" />
                                            <label for="service-@service.Id" class="ml-2 block text-sm text-gray-900 dark:text-gray-300">@service.Name</label>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="text-xs text-gray-500 dark:text-gray-400">Loading services...</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="bg-gray-50 dark:bg-gray-900 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                    <button @onclick="SaveClient" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-blue-600 text-base font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 sm:ml-3 sm:w-auto sm:text-sm">
                        Save
                    </button>
                    <button @onclick="CloseModal" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 dark:border-gray-600 shadow-sm px-4 py-2 bg-white dark:bg-gray-700 text-base font-medium text-gray-700 dark:text-gray-200 hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Client> clients = new();
    private List<Service>? availableServices;
    private bool isLoading = true;
    private bool showModal = false;
    private bool isEditing = false;
    private Client currentClient = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            var clientsTask = ClientService.GetClientsAsync();
            var servicesTask = BusinessConfigurationService.GetServicesAsync();
            
            await Task.WhenAll(clientsTask, servicesTask);
            
            clients = await clientsTask;
            availableServices = await servicesTask;
        }
        catch (Exception ex)
        {
            NotificationService.ShowError($"Failed to load data: {ex.Message}", "Error");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ToggleService(int serviceId, bool isChecked)
    {
        currentClient.SubscribedServiceIds ??= new List<int>();
        if (isChecked)
        {
            if (!currentClient.SubscribedServiceIds.Contains(serviceId))
            {
                currentClient.SubscribedServiceIds.Add(serviceId);
            }
        }
        else
        {
            currentClient.SubscribedServiceIds.Remove(serviceId);
        }
        CalculateAnnualContractValue();
    }

    private void CalculateAnnualContractValue()
    {
        if (currentClient.SubscribedServiceIds == null || availableServices == null)
        {
            currentClient.AnnualContractValue = 0;
            return;
        }

        double total = 0;
        foreach (var id in currentClient.SubscribedServiceIds)
        {
            var service = availableServices.FirstOrDefault(s => s.Id == id);
            if (service != null)
            {
                if (service.BillingType == "fixed")
                {
                    total += service.FlatPrice ?? service.UnitPrice;
                }
                else if (service.BillingType == "retainer")
                {
                    total += service.UnitPrice * 12; // Monthly retainer
                }
                else // hourly
                {
                    total += service.UnitPrice * (service.EstimatedHours ?? 0);
                }
            }
        }
        currentClient.AnnualContractValue = total;
    }

    private void ShowAddModal()
    {
        currentClient = new Client { Status = "active" };
        isEditing = false;
        showModal = true;
    }

    private void EditClient(Client client)
    {
        currentClient = new Client
        {
            Id = client.Id,
            CompanyName = client.CompanyName,
            ContactName = client.ContactName,
            Email = client.Email,
            Phone = client.Phone,
            Address = client.Address,
            Industry = client.Industry,
            Status = client.Status,
            PaymentTerms = client.PaymentTerms,
            CreditLimit = client.CreditLimit,
            AnnualContractValue = client.AnnualContractValue,
            PrimaryProductsPurchased = client.PrimaryProductsPurchased,
            SubscribedServiceIds = client.SubscribedServiceIds != null ? new List<int>(client.SubscribedServiceIds) : new List<int>()
        };
        isEditing = true;
        showModal = true;
    }

    private async Task SaveClient()
    {
        try
        {
            if (isEditing)
            {
                await ClientService.UpdateClientAsync(currentClient);
                NotificationService.ShowSuccess("Client updated successfully", "Success");
            }
            else
            {
                await ClientService.AddClientAsync(currentClient);
                NotificationService.ShowSuccess("Client added successfully", "Success");
            }
            await LoadData();
            CloseModal();
        }
        catch (Exception ex)
        {
            NotificationService.ShowError($"Failed to save client: {ex.Message}", "Error");
        }
    }

    private async Task DeleteClient(Client client)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete '{client.CompanyName}'?"))
        {
            try
            {
                await ClientService.DeleteClientAsync(client.Id ?? 0);
                NotificationService.ShowSuccess("Client deleted successfully", "Success");
                await LoadData();
            }
            catch (Exception ex)
            {
                NotificationService.ShowError($"Failed to delete client: {ex.Message}", "Error");
            }
        }
    }

    private void CloseModal()
    {
        showModal = false;
        currentClient = new Client();
    }
}