@page "/tools"
@inject ITauriService AppService

<PageTitle>Tools - The Planning Bord</PageTitle>

<div class="flex flex-col h-full relative">
    <div class="flex justify-between items-center mb-6">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Tool & Equipment Tracking</h3>
        <button @onclick="OpenAddModal" class="px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
            âž• New Tool
        </button>
    </div>

    <div class="flex-1 overflow-auto bg-white shadow rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Condition</th>
                    <th class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @if (tools == null) { <tr><td colspan="5" class="px-6 py-4 text-center">Loading...</td></tr> }
                else if (!tools.Any()) { <tr><td colspan="5" class="px-6 py-4 text-center">No tools found.</td></tr> }
                else
                {
                    @foreach (var t in tools)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@t.Name</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@t.TypeName</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @(t.Status == "available" ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                                    @t.Status
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@t.Condition</td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <button @onclick="() => EditTool(t)" class="text-blue-600 hover:text-blue-900 mr-3">Edit</button>
                                <button @onclick="() => DeleteTool(t.Id ?? 0)" class="text-red-600 hover:text-red-900">Delete</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@if (showAddModal)
{
    <div class="fixed z-10 inset-0 overflow-y-auto">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 transition-opacity"><div class="absolute inset-0 bg-gray-500 opacity-75"></div></div>
            <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <h3 class="text-lg leading-6 font-medium text-gray-900">@((newTool.Id.HasValue ? "Edit" : "Add")) Tool</h3>
                    <div class="mt-4 grid grid-cols-1 gap-y-4">
                        <input type="text" @bind="newTool.Name" placeholder="Tool Name" class="block w-full border-gray-300 rounded-md shadow-sm" />
                        <input type="text" @bind="newTool.TypeName" placeholder="Type (e.g., Drill, Saw)" class="block w-full border-gray-300 rounded-md shadow-sm" />
                        <select @bind="newTool.Status" class="block w-full border-gray-300 rounded-md shadow-sm">
                            <option value="available">Available</option>
                            <option value="in_use">In Use</option>
                            <option value="maintenance">Maintenance</option>
                        </select>
                        <select @bind="newTool.Condition" class="block w-full border-gray-300 rounded-md shadow-sm">
                            <option value="new">New</option>
                            <option value="good">Good</option>
                            <option value="fair">Fair</option>
                            <option value="poor">Poor</option>
                        </select>
                    </div>
                </div>
                <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                    <button type="button" @onclick="SaveTool" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-blue-600 text-base font-medium text-white hover:bg-blue-700 sm:ml-3 sm:w-auto sm:text-sm">Save</button>
                    <button type="button" @onclick="() => showAddModal = false" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Tool>? tools;
    private bool showAddModal = false;
    private Tool newTool = new Tool();

    protected override async Task OnInitializedAsync()
    {
        await LoadTools();
    }

    private async Task LoadTools()
    {
        try { tools = await AppService.GetToolsAsync(); }
        catch (Exception ex) { Console.WriteLine(ex.Message); tools = new List<Tool>(); }
    }

    private void OpenAddModal()
    {
        newTool = new Tool();
        showAddModal = true;
    }

    private void EditTool(Tool t)
    {
        newTool = new Tool { Id = t.Id, Name = t.Name, TypeName = t.TypeName, Status = t.Status, AssignedToEmployeeId = t.AssignedToEmployeeId, PurchaseDate = t.PurchaseDate, Condition = t.Condition };
        showAddModal = true;
    }

    private async Task SaveTool()
    {
        try
        {
            if (newTool.Id.HasValue) await AppService.UpdateToolAsync(newTool);
            else await AppService.AddToolAsync(newTool);
            showAddModal = false;
            await LoadTools();
        }
        catch (Exception ex) { Console.WriteLine(ex.Message); }
    }

    private async Task DeleteTool(int id)
    {
        if (id == 0) return;
        try { await AppService.DeleteToolAsync(id); await LoadTools(); }
        catch (Exception ex) { Console.WriteLine(ex.Message); }
    }
}
