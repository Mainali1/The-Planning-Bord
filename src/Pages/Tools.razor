    private async Task OpenHistoryModal(Tool t)
    {
        Console.WriteLine($"Tools.OpenHistoryModal: Opening history modal for tool {t.Name} (ID: {t.Id})");
        selectedTool = t;
        toolHistory = null;
        showHistoryModal = true;
        if (t.Id.HasValue)
        {
            try
            {
                Console.WriteLine($"Tools.OpenHistoryModal: Fetching history for tool ID {t.Id.Value}");
                toolHistory = await InventoryService.GetToolHistoryAsync(t.Id.Value) ?? new List<ToolAssignment>();
                Console.WriteLine($"Tools.OpenHistoryModal: Successfully loaded {toolHistory.Count} history entries");
            }
            catch (TauriValidationException ex)
            {
                Console.WriteLine($"Tools.OpenHistoryModal: Tauri validation error - {ex.Message}");
                NotificationService.ShowError(ex.Message);
                toolHistory = new List<ToolAssignment>();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Tools.OpenHistoryModal: Error loading history - {ex.Message}");
                NotificationService.ShowError($"Failed to load history: {ex.Message}");
                toolHistory = new List<ToolAssignment>();
            }
        }
    }
