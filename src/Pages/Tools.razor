@code {
    private List<Tool>? tools;
    private List<Employee>? employees;
    private List<Product> assetProducts = new(); // List of asset products from inventory
    private bool showAddModal = false;
    private bool showAssignModal = false;
    private bool showReturnModal = false;
    private bool showHistoryModal = false;
    private bool showDeleteModal = false;
    private bool isLoading = false;
    private Tool newTool = new Tool();
    private Tool? selectedTool;
    private List<ToolAssignment>? toolHistory;
    private int deleteToolId = 0;
    private User? currentUser;

    // Assign Modal
    private int assignEmployeeId;
    private string assignCondition = "good";
    private string assignNotes = "";

    // Return Modal
    private string returnCondition = "good";
    private string returnNotes = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadTools();
        await LoadEmployees();
        await LoadAssetProducts();
        try { currentUser = await UserService.GetCurrentUserAsync(); }
        catch { }
    }

    private async Task LoadAssetProducts()
    {
        try 
        {
            var result = await InventoryService.GetProductsAsync(null, 1, 1000);
            assetProducts = result.Items.Where(p => p.ItemType == "assets").ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Tools.LoadAssetProducts: {ex.Message}");
        }
    }

    private async Task LoadTools()
    {
        try { 
            Console.WriteLine("Tools.LoadTools: Loading tools...");
            var result = await InventoryService.GetToolsAsync(); 
            tools = result?.Items ?? new List<Tool>();
            Console.WriteLine($"Tools.LoadTools: Loaded {tools.Count} tools");
        }
        catch (TauriValidationException ex) { 
            Console.WriteLine($"Tools.LoadTools TauriValidationException: {ex.Message}");
            NotificationService.ShowError(ex.Message); 
            tools = new List<Tool>(); 
        }
        catch (Exception ex) { 
            Console.WriteLine($"Tools.LoadTools Exception: {ex.Message}");
            Console.WriteLine($"Tools.LoadTools Exception StackTrace: {ex.StackTrace}");
            NotificationService.ShowError("Failed to load tools: " + ex.Message); 
            tools = new List<Tool>(); 
        }
    }

    private async Task LoadEmployees()
    {
        try { employees = await HrService.GetEmployeesAsync() ?? new List<Employee>(); }
        catch (TauriValidationException ex) { NotificationService.ShowError(ex.Message); employees = new List<Employee>(); }
        catch (Exception ex) { NotificationService.ShowError("Failed to load employees: " + ex.Message); employees = new List<Employee>(); }
    }

    private string GetEmployeeName(int? id)
    {
        if (id == null || employees == null) return "Unknown";
        var emp = employees.FirstOrDefault(e => e.Id == id);
        return emp != null ? $"{emp.FirstName} {emp.LastName}" : "Unknown";
    }

    private void OnAssetSelected(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int pid))
        {
            var p = assetProducts.FirstOrDefault(x => x.Id == pid);
            if (p != null)
            {
                newTool.ProductId = pid;
                newTool.Name = p.Name;
                newTool.TypeName = p.Category ?? "Asset"; 
            }
        }
        else
        {
            newTool.ProductId = null;
        }
    }

    private void OpenAddModal()
    {
        newTool = new Tool();
        showAddModal = true;
    }

    private void EditTool(Tool t)
    {
        newTool = new Tool { 
            Id = t.Id, 
            Name = t.Name, 
            TypeName = t.TypeName, 
            Status = t.Status, 
            AssignedToEmployeeId = t.AssignedToEmployeeId, 
            PurchaseDate = t.PurchaseDate, 
            Condition = t.Condition,
            ProductId = t.ProductId
        };
        showAddModal = true;
    }

    private async Task SaveTool()
    {
        isLoading = true;
        try
        {
            if (string.IsNullOrWhiteSpace(newTool.Name))
            {
                NotificationService.ShowError("Tool Name is required.");
                return;
            }

            if (newTool.Id.HasValue) 
            {
                await InventoryService.UpdateToolAsync(newTool);
                NotificationService.ShowSuccess("Tool updated successfully.");
            }
            else 
            {
                await InventoryService.AddToolAsync(newTool);
                NotificationService.ShowSuccess("Tool added successfully.");
            }
            showAddModal = false;
            await LoadTools();
        }
        catch (TauriValidationException ex)
        {
            NotificationService.ShowError(ex.Message);
        }
        catch (Exception ex) 
        { 
            Console.WriteLine($"Tools.SaveTool Error: {ex.Message}");
            Console.WriteLine($"Tools.SaveTool Error StackTrace: {ex.StackTrace}");
            NotificationService.ShowError($"Failed to save tool: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void DeleteTool(int id)
    {
        if (id == 0) return;
        
        // Check permissions
        if (currentUser == null || (currentUser.Role != "CEO" && currentUser.Role != "manager" && currentUser.Role != "Manager"))
        {
            NotificationService.ShowError("Unauthorized: Only managers can delete tools.");
            return;
        }

        deleteToolId = id;
        showDeleteModal = true;
    }

    private async Task ConfirmDeleteTool()
    {
        if (deleteToolId == 0) return;
        isLoading = true;
        try 
        { 
            await InventoryService.DeleteToolAsync(deleteToolId); 
            await LoadTools(); 
            NotificationService.ShowSuccess("Tool deleted successfully."); 
            showDeleteModal = false;
        }
        catch (TauriValidationException ex)
        {
            NotificationService.ShowError(ex.Message);
        }
        catch (Exception ex) 
        { 
            NotificationService.ShowError($"Failed to delete tool: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    // Assign Tool
    private void OpenAssignModal(Tool t)
    {
        selectedTool = t;
        assignEmployeeId = 0;
        assignCondition = t.Condition ?? "good";
        assignNotes = "";
        showAssignModal = true;
    }

    private async Task AssignTool()
    {
        if (selectedTool == null || selectedTool.Id == null || assignEmployeeId == 0) 
        {
            NotificationService.ShowError("Please select an employee.");
            return;
        }
        isLoading = true;
        try
        {
            await InventoryService.AssignToolAsync(selectedTool.Id.Value, assignEmployeeId, assignCondition, assignNotes);
            showAssignModal = false;
            await LoadTools();
            NotificationService.ShowSuccess("Tool assigned successfully.");
        }
        catch (TauriValidationException ex)
        {
            NotificationService.ShowError(ex.Message);
        }
        catch (Exception ex) 
        { 
            NotificationService.ShowError($"Failed to assign tool: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    // Return Tool
    private void OpenReturnModal(Tool t)
    {
        selectedTool = t;
        returnCondition = t.Condition ?? "good";
        returnNotes = "";
        showReturnModal = true;
    }

    private async Task ReturnTool()
    {
        if (selectedTool == null || selectedTool.Id == null) return;
        isLoading = true;
        try
        {
            await InventoryService.ReturnToolAsync(selectedTool.Id.Value, returnCondition, returnNotes);
            showReturnModal = false;
            await LoadTools();
            NotificationService.ShowSuccess("Tool returned successfully.");
        }
        catch (TauriValidationException ex)
        {
            NotificationService.ShowError(ex.Message);
        }
        catch (Exception ex) 
        { 
            NotificationService.ShowError($"Failed to return tool: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    // History
    private async Task OpenHistoryModal(Tool t)
    {
        Console.WriteLine($"Tools.OpenHistoryModal: Opening history modal for tool {t.Name} (ID: {t.Id})");
        selectedTool = t;
        toolHistory = null;
        showHistoryModal = true;
        if (t.Id.HasValue)
        {
            try
            {
                Console.WriteLine($"Tools.OpenHistoryModal: Fetching history for tool ID {t.Id.Value}");
                toolHistory = await InventoryService.GetToolHistoryAsync(t.Id.Value) ?? new List<ToolAssignment>();
                Console.WriteLine($"Tools.OpenHistoryModal: Successfully loaded {toolHistory.Count} history entries");
            }
            catch (TauriValidationException ex)
            {
                Console.WriteLine($"Tools.OpenHistoryModal: Tauri validation error - {ex.Message}");
                NotificationService.ShowError(ex.Message);
                toolHistory = new List<ToolAssignment>();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Tools.OpenHistoryModal: Error loading history - {ex.Message}");
                NotificationService.ShowError($"Failed to load history: {ex.Message}");
                toolHistory = new List<ToolAssignment>();
            }
        }
    }
}
