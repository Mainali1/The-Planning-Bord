@page "/projects/{ProjectId:int}/profitability"
@attribute [Authorize(Roles = "CEO,Manager,Finance")]
@using Models = ThePlanningBord.Models
@using ThePlanningBord.Services
@inject IProjectService ProjectService
@inject NavigationManager NavigationManager

<div class="p-6">
    <div class="mb-6 flex items-center justify-between">
        <div class="flex items-center space-x-4">
            <button class="text-gray-500 hover:text-gray-700" @onclick="GoBack">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
            </button>
            <h1 class="text-2xl font-bold text-gray-800">Project Profitability</h1>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="flex justify-center items-center h-64">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-4">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm text-red-700">@errorMessage</p>
                </div>
            </div>
        </div>
    }
    else if (data != null)
    {
        <div class="bg-white shadow rounded-lg p-6 mb-6">
            <div class="flex justify-between items-start border-b pb-4 mb-4">
                <div>
                    <h2 class="text-xl font-semibold text-gray-800">@data.ProjectName</h2>
                    <p class="text-gray-500">Client: @data.ClientName</p>
                </div>
                <div class="text-right">
                    <div class="text-sm text-gray-500">Profit Margin</div>
                    <div class="text-3xl font-bold @GetMarginColorClass(data.ProfitMarginPercent)">
                        @data.ProfitMarginPercent.ToString("F1")%
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                <div class="bg-green-50 p-4 rounded-lg border border-green-100">
                    <div class="text-sm font-medium text-green-800 mb-1">Total Revenue</div>
                    <div class="text-2xl font-bold text-green-700">@FormatCurrency(data.TotalRevenue)</div>
                </div>
                <div class="bg-red-50 p-4 rounded-lg border border-red-100">
                    <div class="text-sm font-medium text-red-800 mb-1">Total Costs</div>
                    <div class="text-2xl font-bold text-red-700">@FormatCurrency(data.TotalLaborCost + data.TotalMaterialCost + data.TotalExpenseCost)</div>
                </div>
                <div class="bg-blue-50 p-4 rounded-lg border border-blue-100">
                    <div class="text-sm font-medium text-blue-800 mb-1">Gross Margin</div>
                    <div class="text-2xl font-bold text-blue-700">@FormatCurrency(data.GrossMargin)</div>
                </div>
            </div>

            <h3 class="text-lg font-medium text-gray-800 mb-4">Cost Breakdown</h3>
            <div class="bg-gray-50 rounded-lg p-6">
                <div class="space-y-4">
                    <div>
                        <div class="flex justify-between text-sm font-medium text-gray-600 mb-1">
                            <span>Labor Cost</span>
                            <span>@FormatCurrency(data.TotalLaborCost)</span>
                        </div>
                        <div class="w-full bg-gray-200 rounded-full h-2.5">
                            <div class="bg-blue-500 h-2.5 rounded-full" style="width: @GetPercentage(data.TotalLaborCost, data.TotalRevenue)%"></div>
                        </div>
                    </div>
                    <div>
                        <div class="flex justify-between text-sm font-medium text-gray-600 mb-1">
                            <span>Material Cost</span>
                            <span>@FormatCurrency(data.TotalMaterialCost)</span>
                        </div>
                        <div class="w-full bg-gray-200 rounded-full h-2.5">
                            <div class="bg-purple-500 h-2.5 rounded-full" style="width: @GetPercentage(data.TotalMaterialCost, data.TotalRevenue)%"></div>
                        </div>
                    </div>
                    <div>
                        <div class="flex justify-between text-sm font-medium text-gray-600 mb-1">
                            <span>Expenses</span>
                            <span>@FormatCurrency(data.TotalExpenseCost)</span>
                        </div>
                        <div class="w-full bg-gray-200 rounded-full h-2.5">
                            <div class="bg-orange-500 h-2.5 rounded-full" style="width: @GetPercentage(data.TotalExpenseCost, data.TotalRevenue)%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public int ProjectId { get; set; }

    private Models.ProjectProfitability? data;
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        errorMessage = null;
        try
        {
            data = await ProjectService.GetProjectProfitabilityAsync(ProjectId);
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load profitability data: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo("/projects");
    }

    private string FormatCurrency(double amount)
    {
        return amount.ToString("C0");
    }

    private string GetMarginColorClass(double margin)
    {
        if (margin >= 30) return "text-green-600";
        if (margin >= 10) return "text-yellow-600";
        return "text-red-600";
    }

    private double GetPercentage(double value, double total)
    {
        if (total == 0) return 0;
        var pct = (value / total) * 100;
        return Math.Min(pct, 100); // Cap at 100% for bar display
    }
}
