@page "/help"
@attribute [Authorize]
@inject ISystemService SystemService
@inject NotificationService NotificationService

<PageTitle>Help & Support - The Planning Bord</PageTitle>

<div class="flex flex-col h-full min-h-screen">
    <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-white mb-6">Help & Support</h3>
    <div class="bg-white dark:bg-gray-800 shadow rounded-lg p-6 prose dark:prose-invert max-w-none border border-gray-200 dark:border-gray-700">
        <h4 class="text-gray-900 dark:text-white">User Guide</h4>
        <p class="text-gray-600 dark:text-gray-300">Welcome to The Planning Bord. Here you can find guides on how to use the various features.</p>
        
        <h4 class="text-gray-900 dark:text-white">Onboarding</h4>
        <p class="text-gray-600 dark:text-gray-300">New to the system? Generate demo data to explore the features.</p>
        <button @onclick="GenerateDemoData" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 mb-4 dark:bg-blue-500 dark:hover:bg-blue-600 transition-colors">Generate Demo Data</button>

        <h5 class="text-gray-900 dark:text-white">Inventory</h5>
        <p class="text-gray-600 dark:text-gray-300">Manage your products, track stock levels, and set reorder points.</p>
        
        <h5 class="text-gray-900 dark:text-white">Tasks</h5>
        <p class="text-gray-600 dark:text-gray-300">Assign tasks to employees and track their progress.</p>
        
        <h4 class="text-gray-900 dark:text-white">Contact Support</h4>
        <p class="text-gray-600 dark:text-gray-300">If you need further assistance, please contact our support team at support@planningbord.com.</p>
    </div>
</div>

@code {
    private async Task GenerateDemoData()
    {
        try
        {
            await SystemService.SeedDemoDataAsync();
            NotificationService.ShowSuccess("Demo data generated successfully!");
        }
        catch (Exception ex)
        {
            NotificationService.ShowError($"Failed to generate data: {ex.Message}");
        }
    }
}
