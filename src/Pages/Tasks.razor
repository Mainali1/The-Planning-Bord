@page "/tasks"
@inject ITauriService AppService
@inject IJSRuntime JSRuntime

<PageTitle>Tasks - The Planning Bord</PageTitle>

<div class="flex flex-col h-full relative">
    <div class="flex justify-between items-center mb-6">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Task Management</h3>
        <button @onclick="OpenAddModal" class="px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
            âž• New Task
        </button>
    </div>

    <div class="flex-1 overflow-auto bg-white shadow rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Assignee</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Priority</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @if (tasks == null) { <tr><td colspan="5" class="px-6 py-4 text-center">Loading...</td></tr> }
                else if (!tasks.Any()) { <tr><td colspan="5" class="px-6 py-4 text-center">No tasks found.</td></tr> }
                else
                {
                    @foreach (var t in tasks)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@t.Title</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@t.EmployeeId</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@t.Priority</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @(t.Status == "completed" ? "bg-green-100 text-green-800" : "bg-yellow-100 text-yellow-800")">
                                    @t.Status
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <button @onclick="() => EditTask(t)" class="text-blue-600 hover:text-blue-900 mr-3">Edit</button>
                                <button @onclick="() => DeleteTask(t.Id ?? 0)" class="text-red-600 hover:text-red-900">Delete</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@if (showAddModal)
{
    <div class="fixed z-10 inset-0 overflow-y-auto">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 transition-opacity"><div class="absolute inset-0 bg-gray-500 opacity-75"></div></div>
            <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <h3 class="text-lg leading-6 font-medium text-gray-900">@((newTask.Id.HasValue ? "Edit" : "Add")) Task</h3>
                    <div class="mt-4 grid grid-cols-1 gap-y-4">
                        <input type="text" @bind="newTask.Title" placeholder="Title" class="block w-full border-gray-300 rounded-md shadow-sm" />
                        <textarea @bind="newTask.Description" placeholder="Description" class="block w-full border-gray-300 rounded-md shadow-sm"></textarea>
                        <select @bind="newTask.Priority" class="block w-full border-gray-300 rounded-md shadow-sm">
                            <option value="low">Low</option>
                            <option value="medium">Medium</option>
                            <option value="high">High</option>
                        </select>
                        <select @bind="newTask.Status" class="block w-full border-gray-300 rounded-md shadow-sm">
                            <option value="pending">Pending</option>
                            <option value="in_progress">In Progress</option>
                            <option value="completed">Completed</option>
                        </select>
                    </div>
                </div>
                <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                    <button type="button" @onclick="SaveTask" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-blue-600 text-base font-medium text-white hover:bg-blue-700 sm:ml-3 sm:w-auto sm:text-sm">Save</button>
                    <button type="button" @onclick="() => showAddModal = false" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<TaskModel>? tasks;
    private bool showAddModal = false;
    private TaskModel newTask = new TaskModel();

    protected override async Task OnInitializedAsync()
    {
        await LoadTasks();
    }

    private async Task LoadTasks()
    {
        try
        {
            tasks = await AppService.GetTasksAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
            tasks = new List<TaskModel>();
        }
    }

    private void OpenAddModal()
    {
        newTask = new TaskModel { DueDate = DateTime.Today, AssignedDate = DateTime.Today };
        showAddModal = true;
    }

    private void CloseAddModal()
    {
        showAddModal = false;
    }

    private void EditTask(TaskModel task)
    {
        newTask = task;
        showAddModal = true;
    }

    private async Task SaveTask()
    {
        try
        {
            if (newTask.Id.HasValue)
            {
                await AppService.UpdateTaskAsync(newTask);
            }
            else
            {
                await AppService.AddTaskAsync(newTask);
            }
            showAddModal = false;
            await LoadTasks();
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
    }

    private async Task DeleteTask(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this task?"))
        {
            await AppService.DeleteTaskAsync(id);
            await LoadTasks();
        }
    }
}
