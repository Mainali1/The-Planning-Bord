@page "/tasks"
@attribute [Authorize]
@inject ITaskService TaskService
@inject IJSRuntime JSRuntime
@inject IUserService UserService
@inject IHrService HrService
@inject NotificationService NotificationService
@using ThePlanningBord.Models
@using ThePlanningBord.Services

<PageTitle>Tasks - The Planning Bord</PageTitle>

<div class="flex flex-col h-full relative">
    <div class="flex justify-between items-center mb-6">
        <h3 class="text-lg font-medium leading-6 text-gray-900">@(CanManageTasks ? "Task Management" : "My Tasks")</h3>
        @if (CanManageTasks)
        {
            <button @onclick="OpenAddModal" class="px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                âž• New Task
            </button>
        }
    </div>

    <div class="flex-1 overflow-auto bg-white shadow rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
                    @if (CanManageTasks)
                    {
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Assignee</th>
                    }
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Due Date</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Priority</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @if (tasks == null) { <tr><td colspan="6" class="px-6 py-4 text-center">Loading...</td></tr> }
                else if (!tasks.Any()) { <tr><td colspan="6" class="px-6 py-4 text-center">No tasks found.</td></tr> }
                else
                {
                    <Virtualize Items="@tasks" Context="t" ItemSize="56">
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@t.Title</td>
                            @if (CanManageTasks)
                            {
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @(GetEmployeeName(t.EmployeeId))
                                </td>
                            }
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@(t.DueDate?.ToShortDateString() ?? "-")</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@t.Priority</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @(t.Status == "completed" ? "bg-green-100 text-green-800" : "bg-yellow-100 text-yellow-800")">@t.Status</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <button @onclick="() => EditTask(t)" class="text-blue-600 hover:text-blue-900 mr-3">@(CanManageTasks ? "Edit" : "Update Status")</button>
                                @if (CanManageTasks)
                                {
                                    <button @onclick="() => DeleteTask(t.Id ?? 0)" class="text-red-600 hover:text-red-900">Delete</button>
                                }
                            </td>
                        </tr>
                    </Virtualize>
                }
            </tbody>
        </table>
    </div>
</div>

@if (showAddModal)
{
    <div class="fixed z-10 inset-0 overflow-y-auto">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 transition-opacity"><div class="absolute inset-0 bg-gray-500 opacity-75"></div></div>
            <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <h3 class="text-lg leading-6 font-medium text-gray-900">@((newTask.Id.HasValue ? "Edit" : "Add")) Task</h3>
                    <div class="mt-4 grid grid-cols-1 gap-y-4">
                        @if (CanManageTasks)
                        {
                            <input type="text" @bind="newTask.Title" placeholder="Title" class="block w-full border-gray-300 rounded-md shadow-sm" />
                            <textarea @bind="newTask.Description" placeholder="Description" class="block w-full border-gray-300 rounded-md shadow-sm"></textarea>
                            
                            <!-- Employee/Assignee Dropdown -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700">Assign To</label>
                                <select @bind="newTask.EmployeeId" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-md">
                                    <option value="">Unassigned</option>
                                    @foreach (var emp in employees)
                                    {
                                        <option value="@emp.Id">@emp.FirstName @emp.LastName (@emp.Role)</option>
                                    }
                                </select>
                            </div>

                            <select @bind="newTask.Priority" class="block w-full border-gray-300 rounded-md shadow-sm">
                                <option value="low">Low</option>
                                <option value="medium">Medium</option>
                                <option value="high">High</option>
                            </select>
                        }
                        else
                        {
                            <div class="block w-full border-gray-300 rounded-md shadow-sm bg-gray-100 p-2">
                                <p><strong>Title:</strong> @newTask.Title</p>
                                <p><strong>Description:</strong> @newTask.Description</p>
                                <p><strong>Priority:</strong> @newTask.Priority</p>
                            </div>
                        }

                        <select @bind="newTask.Status" class="block w-full border-gray-300 rounded-md shadow-sm">
                            <option value="pending">Pending</option>
                            <option value="in_progress">In Progress</option>
                            <option value="completed">Completed</option>
                        </select>
                    </div>
                </div>
                <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                    <button type="button" @onclick="SaveTask" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-blue-600 text-base font-medium text-white hover:bg-blue-700 sm:ml-3 sm:w-auto sm:text-sm">Save</button>
                    <button type="button" @onclick="() => showAddModal = false" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<TaskModel>? tasks;
    private bool showAddModal = false;
    private TaskModel newTask = new TaskModel();
    private User? currentUser;
    private List<Employee> employees = new List<Employee>();

    private bool CanManageTasks => currentUser?.Role == "CEO" || currentUser?.Role == "Manager";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            currentUser = await UserService.GetCurrentUserAsync();
        }
        catch (Exception ex)
        {
            NotificationService.ShowError("Failed to load user profile: " + ex.Message);
        }

        if (CanManageTasks)
        {
            try {
                employees = await HrService.GetEmployeesAsync();
            } 
            catch (TauriValidationException ex)
            {
                NotificationService.ShowError(ex.Message);
            }
            catch (Exception ex) {
                NotificationService.ShowError("Error loading employees: " + ex.Message);
            }
        }
        await LoadTasks();
    }

    private async Task LoadTasks()
    {
        try
        {
            tasks = await TaskService.GetTasksAsync() ?? new List<TaskModel>();
        }
        catch (TauriValidationException ex)
        {
            NotificationService.ShowError(ex.Message);
            tasks = new List<TaskModel>();
        }
        catch (Exception ex)
        {
            NotificationService.ShowError("Failed to load tasks: " + ex.Message);
            tasks = new List<TaskModel>();
        }
    }

    private string GetEmployeeName(int? employeeId)
    {
        if (!employeeId.HasValue) return "Unassigned";
        var emp = employees.FirstOrDefault(e => e.Id == employeeId.Value);
        return emp != null ? $"{emp.FirstName} {emp.LastName}" : $"ID: {employeeId}";
    }

    private void OpenAddModal()
    {
        newTask = new TaskModel { DueDate = DateTime.Today, AssignedDate = DateTime.Today, Priority = "medium", Status = "pending" };
        showAddModal = true;
    }

    private void CloseAddModal()
    {
        showAddModal = false;
    }

    private void EditTask(TaskModel task)
    {
        try
        {
            // Cloning for safety to avoid modifying the list item directly before save
            newTask = new TaskModel {
                Id = task.Id,
                EmployeeId = task.EmployeeId,
                Title = task.Title,
                Description = task.Description,
                DueDate = task.DueDate,
                Status = task.Status,
                Priority = task.Priority,
                AssignedDate = task.AssignedDate,
                CompletedDate = task.CompletedDate
            };
            showAddModal = true;
        }
        catch (Exception ex)
        {
            NotificationService.ShowError($"Failed to edit task: {ex.Message}");
        }
    }

    private async Task SaveTask()
    {
        try
        {
            if (newTask.Id.HasValue)
            {
                await TaskService.UpdateTaskAsync(newTask);
            }
            else
            {
                await TaskService.AddTaskAsync(newTask);
            }
            showAddModal = false;
            await LoadTasks();
            NotificationService.ShowSuccess("Task saved successfully.");
        }
        catch (TauriValidationException ex)
        {
            NotificationService.ShowError(ex.Message);
        }
        catch (Exception ex)
        {
            NotificationService.ShowError("Failed to save task: " + ex.Message);
        }
    }

    private async Task DeleteTask(int id)
    {
        try
        {
            bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this task?");
            if (confirmed)
            {
                await TaskService.DeleteTaskAsync(id);
                await LoadTasks();
                NotificationService.ShowSuccess("Task deleted successfully.");
            }
        }
        catch (TauriValidationException ex)
        {
            NotificationService.ShowError(ex.Message);
        }
        catch (Exception ex)
        {
            NotificationService.ShowError("Failed to delete task: " + ex.Message);
        }
    }
}
