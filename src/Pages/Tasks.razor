@page "/tasks"
@attribute [Authorize]
@inject ITaskService TaskService
@inject IJSRuntime JSRuntime
@inject IUserService UserService
@inject IHrService HrService
@inject NotificationService NotificationService
@using ThePlanningBord.Models
@using ThePlanningBord.Services

<PageTitle>Tasks - The Planning Bord</PageTitle>

<div class="flex flex-col h-full relative">
    <div class="flex justify-between items-center mb-6">
        <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-white">@(CanManageTasks ? "Task Management" : "My Tasks")</h3>
        @if (CanManageTasks)
        {
            <button @onclick="OpenAddModal" class="px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600 transition-colors">
                âž• New Task
            </button>
        }
    </div>

    <div class="flex-1 overflow-auto bg-white dark:bg-gray-800 shadow rounded-lg border border-gray-200 dark:border-gray-700">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
            <thead class="bg-gray-50 dark:bg-gray-900">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Title</th>
                    @if (CanManageTasks)
                    {
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Assignee</th>
                    }
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Due Date</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Priority</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Status</th>
                    <th class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
                </tr>
            </thead>
            <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                @if (tasks == null) { <tr><td colspan="6" class="px-6 py-4 text-center dark:text-gray-400">Loading...</td></tr> }
                else if (!tasks.Any()) { <tr><td colspan="6" class="px-6 py-4 text-center dark:text-gray-400">No tasks found.</td></tr> }
                else
                {
                    <Virtualize Items="@tasks" Context="t" ItemSize="56">
                        <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                                <div class="flex items-center">
                                    <input type="checkbox" checked="@(t.Status == "completed")" @onchange="@(e => ToggleTaskStatus(t))" class="h-5 w-5 text-blue-600 border-gray-300 dark:border-gray-600 rounded focus:ring-blue-500 mr-4 cursor-pointer bg-white dark:bg-gray-700" />
                                    <span class="font-medium @(t.Status == "completed" ? "line-through text-gray-400 dark:text-gray-500" : "text-gray-700 dark:text-gray-200")">@t.Title</span>
                                </div>
                            </td>
                            @if (CanManageTasks)
                            {
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                                    <div class="flex items-center">
                                        <div class="flex-shrink-0 h-8 w-8 rounded-full bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center text-blue-700 dark:text-blue-400 font-semibold text-xs mr-3">
                                            @GetInitials(GetEmployeeName(t.EmployeeId))
                                        </div>
                                        <span>@(GetEmployeeName(t.EmployeeId))</span>
                                    </div>
                                </td>
                            }
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">@(t.DueDate?.ToShortDateString() ?? "-")</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full @GetPriorityColor(t.Priority)">
                                    @t.Priority
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @(t.Status == "completed" ? "bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400" : (t.Status == "in_progress" ? "bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-400" : "bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-400"))">
                                    @t.Status?.Replace("_", " ")
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <button @onclick="() => EditTask(t)" class="text-blue-600 hover:text-blue-900 dark:text-blue-400 dark:hover:text-blue-300 mr-3">
                                    <i class="fas fa-edit mr-1"></i> @(CanManageTasks ? "Edit" : "Update Status")
                                </button>
                                @if (CanManageTasks)
                                {
                                    <button @onclick="() => DeleteTask(t.Id ?? 0)" class="text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-300">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                }
                            </td>
                        </tr>
                    </Virtualize>
                }
            </tbody>
        </table>
    </div>
</div>

@if (showAddModal)
{
    <div class="fixed inset-0 z-50 overflow-y-auto" role="dialog" aria-modal="true" aria-labelledby="modal-title">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div @onclick="() => showAddModal = false" class="fixed inset-0 bg-gray-500 bg-opacity-75 dark:bg-gray-900 dark:bg-opacity-80 transition-opacity" aria-hidden="true"></div>

            <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>

            <div class="inline-block align-bottom bg-white dark:bg-gray-800 rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full border border-gray-200 dark:border-gray-700">
                <div class="bg-white dark:bg-gray-800 px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white" id="modal-title">@((newTask.Id.HasValue ? "Edit" : "Add")) Task</h3>
                    <div class="mt-4 grid grid-cols-1 gap-y-4">
                        @if (CanManageTasks)
                        {
                            <input type="text" @bind="newTask.Title" placeholder="Title" class="block w-full px-3 py-2 border-gray-300 dark:border-gray-600 rounded-md shadow-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white transition-colors" />
                            <textarea @bind="newTask.Description" placeholder="Description" class="block w-full px-3 py-2 border-gray-300 dark:border-gray-600 rounded-md shadow-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white transition-colors"></textarea>
                            
                            <!-- Employee/Assignee Dropdown -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Assign To</label>
                                <select @bind="newTask.EmployeeId" class="mt-1 block w-full px-3 py-2 text-base border-gray-300 dark:border-gray-600 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-md bg-white dark:bg-gray-700 text-gray-900 dark:text-white transition-colors">
                                    <option value="">Unassigned</option>
                                    @foreach (var emp in employees)
                                    {
                                        <option value="@emp.Id">@emp.FirstName @emp.LastName (@emp.Role)</option>
                                    }
                                </select>
                            </div>

                            <select @bind="newTask.Priority" class="block w-full px-3 py-2 border-gray-300 dark:border-gray-600 rounded-md shadow-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white transition-colors">
                                <option value="low">Low</option>
                                <option value="medium">Medium</option>
                                <option value="high">High</option>
                            </select>
                        }
                        else
                        {
                            <div class="block w-full border-gray-300 dark:border-gray-600 rounded-md shadow-sm bg-gray-100 dark:bg-gray-700 p-2">
                                <p class="dark:text-gray-200"><strong>Title:</strong> @newTask.Title</p>
                                <p class="dark:text-gray-200"><strong>Description:</strong> @newTask.Description</p>
                                <p class="dark:text-gray-200"><strong>Priority:</strong> @newTask.Priority</p>
                            </div>
                        }

                        <select @bind="newTask.Status" class="block w-full px-3 py-2 border-gray-300 dark:border-gray-600 rounded-md shadow-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white transition-colors">
                            <option value="pending">Pending</option>
                            <option value="in_progress">In Progress</option>
                            <option value="completed">Completed</option>
                        </select>
                    </div>
                </div>
                <div class="bg-gray-50 dark:bg-gray-900 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse border-t border-gray-200 dark:border-gray-700">
                    <button type="button" @onclick="SaveTask" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-blue-600 text-base font-medium text-white hover:bg-blue-700 sm:ml-3 sm:w-auto sm:text-sm dark:bg-blue-500 dark:hover:bg-blue-600 transition-colors">Save</button>
                    <button type="button" @onclick="() => showAddModal = false" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 dark:border-gray-600 shadow-sm px-4 py-2 bg-white dark:bg-gray-700 text-base font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-600 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm transition-colors">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<TaskModel>? tasks;
    private bool showAddModal = false;
    private TaskModel newTask = new TaskModel();
    private User? currentUser;
    private List<Employee> employees = new List<Employee>();

    private bool CanManageTasks => currentUser?.Role == "CEO" || currentUser?.Role == "Manager";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            currentUser = await UserService.GetCurrentUserAsync();
        }
        catch (Exception ex)
        {
            NotificationService.ShowError("Failed to load user profile: " + ex.Message);
        }

        if (CanManageTasks)
        {
            try {
                employees = await HrService.GetEmployeesAsync();
            } 
            catch (TauriValidationException ex)
            {
                NotificationService.ShowError(ex.Message);
            }
            catch (Exception ex) {
                NotificationService.ShowError("Error loading employees: " + ex.Message);
            }
        }
        await LoadTasks();
    }

    private async Task LoadTasks()
    {
        try
        {
            tasks = await TaskService.GetTasksAsync() ?? new List<TaskModel>();
        }
        catch (TauriValidationException ex)
        {
            NotificationService.ShowError(ex.Message);
            tasks = new List<TaskModel>();
        }
        catch (Exception ex)
        {
            NotificationService.ShowError("Failed to load tasks: " + ex.Message);
            tasks = new List<TaskModel>();
        }
    }

    private string GetEmployeeName(int? employeeId)
    {
        if (!employeeId.HasValue) return "Unassigned";
        var emp = employees.FirstOrDefault(e => e.Id == employeeId.Value);
        return emp != null ? $"{emp.FirstName} {emp.LastName}" : $"ID: {employeeId}";
    }

    private void OpenAddModal()
    {
        newTask = new TaskModel { DueDate = DateTime.Today, AssignedDate = DateTime.Today, Priority = "medium", Status = "pending" };
        showAddModal = true;
    }

    private void CloseAddModal()
    {
        showAddModal = false;
    }

    private void EditTask(TaskModel task)
    {
        try
        {
            // Cloning for safety to avoid modifying the list item directly before save
            newTask = new TaskModel {
                Id = task.Id,
                EmployeeId = task.EmployeeId,
                Title = task.Title,
                Description = task.Description,
                DueDate = task.DueDate,
                Status = task.Status,
                Priority = task.Priority,
                AssignedDate = task.AssignedDate,
                CompletedDate = task.CompletedDate
            };
            showAddModal = true;
        }
        catch (Exception ex)
        {
            NotificationService.ShowError($"Failed to edit task: {ex.Message}");
        }
    }

    private async Task ToggleTaskStatus(TaskModel task)
    {
        try
        {
            task.Status = task.Status == "completed" ? "pending" : "completed";
            if (task.Status == "completed")
            {
                task.CompletedDate = DateTime.Now;
            }
            else
            {
                task.CompletedDate = null;
            }
            await TaskService.UpdateTaskAsync(task);
            NotificationService.ShowSuccess($"Task '{task.Title}' marked as {task.Status}.");
            await LoadTasks();
        }
        catch (Exception ex)
        {
            NotificationService.ShowError($"Failed to update task status: {ex.Message}");
        }
    }

    private string GetInitials(string name)
    {
        if (string.IsNullOrWhiteSpace(name) || name == "Unassigned") return "??";
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length == 1) return parts[0].Substring(0, Math.Min(2, parts[0].Length)).ToUpper();
        return (parts[0][0].ToString() + parts[parts.Length - 1][0].ToString()).ToUpper();
    }

    private string GetPriorityColor(string priority)
    {
        return priority?.ToLower() switch
        {
            "high" => "bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400",
            "medium" => "bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-400",
            "low" => "bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400",
            _ => "bg-gray-100 text-gray-800 dark:bg-gray-900/30 dark:text-gray-400"
        };
    }

    private async Task SaveTask()
    {
        try
        {
            Console.WriteLine($"Tasks.SaveTask: Saving task '{newTask.Title}' (ID: {newTask.Id})");
            if (newTask.Id.HasValue)
            {
                Console.WriteLine($"Tasks.SaveTask: Updating existing task");
                await TaskService.UpdateTaskAsync(newTask);
            }
            else
            {
                Console.WriteLine($"Tasks.SaveTask: Adding new task");
                await TaskService.AddTaskAsync(newTask);
            }
            showAddModal = false;
            await LoadTasks();
            NotificationService.ShowSuccess("Task saved successfully.");
            Console.WriteLine($"Tasks.SaveTask: Task saved successfully");
        }
        catch (TauriValidationException ex)
        {
            Console.WriteLine($"Tasks.SaveTask: Tauri validation error - {ex.Message}");
            NotificationService.ShowError(ex.Message);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Tasks.SaveTask: Error saving task - {ex.Message}");
            NotificationService.ShowError("Failed to save task: " + ex.Message);
        }
    }

    private async Task DeleteTask(int id)
    {
        try
        {
            bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this task?");
            if (confirmed)
            {
                await TaskService.DeleteTaskAsync(id);
                await LoadTasks();
                NotificationService.ShowSuccess("Task deleted successfully.");
            }
        }
        catch (TauriValidationException ex)
        {
            NotificationService.ShowError(ex.Message);
        }
        catch (Exception ex)
        {
            NotificationService.ShowError("Failed to delete task: " + ex.Message);
        }
    }
}
