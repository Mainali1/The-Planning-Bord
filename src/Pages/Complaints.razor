@page "/complaints"
@attribute [Authorize]
@inject IComplaintService ComplaintService
@inject IJSRuntime JS
@inject NotificationService NotificationService
@using ThePlanningBord.Models

<PageTitle>Complaints - The Planning Bord</PageTitle>

<div class="flex flex-col h-full relative">
    <div class="flex justify-between items-center mb-6">
        <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-white">Anonymous Complaint System</h3>
        <button @onclick="OpenAddModal" class="px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600 transition-colors">
            âž• Submit Complaint
        </button>
    </div>

    <div class="flex-1 overflow-auto bg-white dark:bg-gray-800 shadow rounded-lg border border-gray-200 dark:border-gray-700">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
            <thead class="bg-gray-50 dark:bg-gray-900/50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Content</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Date</th>
                    <th class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
                </tr>
            </thead>
            <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                @if (complaints == null) { <tr><td colspan="4" class="px-6 py-4 text-center dark:text-gray-400">Loading...</td></tr> }
                else if (!complaints.Any()) { <tr><td colspan="4" class="px-6 py-4 text-center dark:text-gray-400">No complaints found.</td></tr> }
                else
                {
                    @foreach (var c in complaints)
                    {
                        <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                                <div class="max-w-xs overflow-hidden text-ellipsis" title="@c.Content">
                                    @c.Content
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @(c.Status == "resolved" ? "bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400" : "bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400")">
                                    @c.Status
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">@c.CreatedAt</td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                @if (c.Status != "resolved")
                                {
                                    <button @onclick="() => OpenResolveModal(c)" class="text-green-600 hover:text-green-900 dark:text-green-400 dark:hover:text-green-300 mr-3 transition-colors">Resolve</button>
                                }
                                <button @onclick="() => DeleteComplaint(c)" class="@(c.Status == "resolved" ? "text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-300" : "text-gray-400 dark:text-gray-600 cursor-not-allowed") transition-colors" disabled="@(c.Status != "resolved")">Delete</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@if (showAddModal)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center p-4 overflow-y-auto" aria-labelledby="modal-title-add-complaint" role="dialog" aria-modal="true">
        <div class="fixed inset-0 transition-opacity" aria-hidden="true" @onclick="() => showAddModal = false">
            <div class="absolute inset-0 bg-gray-500/75 dark:bg-gray-900/80"></div>
        </div>
        <div class="relative w-full max-w-lg bg-white dark:bg-gray-800 rounded-lg shadow-xl overflow-hidden border border-gray-200 dark:border-gray-700 transform transition-all">
            <div class="bg-white dark:bg-gray-800 px-6 py-4 border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-900/50">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white" id="modal-title-add-complaint">Submit Complaint (Anonymous)</h3>
            </div>
            <div class="p-6">
                <div class="grid grid-cols-1 gap-y-4">
                    <textarea @bind="newComplaint.Content" placeholder="Describe your complaint here..." class="block w-full border border-gray-300 dark:border-gray-600 rounded-md shadow-sm h-32 bg-white dark:bg-gray-700 text-gray-900 dark:text-white px-3 py-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"></textarea>
                </div>
            </div>
            <div class="bg-gray-50 dark:bg-gray-900/50 px-6 py-4 border-t border-gray-200 dark:border-gray-700 flex flex-row-reverse space-x-3 space-x-reverse">
                <button type="button" @onclick="SaveComplaint" class="inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-blue-600 text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dark:bg-blue-500 dark:hover:bg-blue-600 transition-colors">Submit</button>
                <button type="button" @onclick="() => showAddModal = false" class="inline-flex justify-center rounded-md border border-gray-300 dark:border-gray-600 shadow-sm px-4 py-2 bg-white dark:bg-gray-700 text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors">Cancel</button>
            </div>
        </div>
    </div>
}

@if (showResolveModal)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center p-4 overflow-y-auto" aria-labelledby="modal-title-resolve-complaint" role="dialog" aria-modal="true">
        <div class="fixed inset-0 transition-opacity" aria-hidden="true" @onclick="() => showResolveModal = false">
            <div class="absolute inset-0 bg-gray-500/75 dark:bg-gray-900/80"></div>
        </div>
        <div class="relative w-full max-w-lg bg-white dark:bg-gray-800 rounded-lg shadow-xl overflow-hidden border border-gray-200 dark:border-gray-700 transform transition-all">
            <div class="bg-white dark:bg-gray-800 px-6 py-4 border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-900/50">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white" id="modal-title-resolve-complaint">Resolve Complaint</h3>
            </div>
            <div class="p-6 space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Resolution Action</label>
                    <input type="text" @bind="resolveResolution" placeholder="What was done?" class="block w-full border border-gray-300 dark:border-gray-600 rounded-md shadow-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white px-3 py-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" />
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Resolved By</label>
                    <input type="text" @bind="resolveBy" placeholder="Name" class="block w-full border border-gray-300 dark:border-gray-600 rounded-md shadow-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white px-3 py-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" />
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Admin Notes</label>
                    <textarea @bind="resolveNotes" class="block w-full border border-gray-300 dark:border-gray-600 rounded-md shadow-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white px-3 py-2 focus:ring-blue-500 focus:border-blue-500 transition-colors" rows="3"></textarea>
                </div>
            </div>
            <div class="bg-gray-50 dark:bg-gray-900/50 px-6 py-4 border-t border-gray-200 dark:border-gray-700 flex flex-row-reverse space-x-3 space-x-reverse">
                <button type="button" @onclick="ConfirmResolve" class="inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-green-600 text-sm font-medium text-white hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 dark:bg-green-500 dark:hover:bg-green-600 transition-colors">Mark Resolved</button>
                <button type="button" @onclick="() => showResolveModal = false" class="inline-flex justify-center rounded-md border border-gray-300 dark:border-gray-600 shadow-sm px-4 py-2 bg-white dark:bg-gray-700 text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors">Cancel</button>
            </div>
        </div>
    </div>
}

@code {
    private List<Complaint>? complaints;
    private bool showAddModal = false;
    private bool showResolveModal = false;
    private Complaint newComplaint = new Complaint();
    private Complaint? selectedComplaint;
    private string resolveResolution = "";
    private string resolveBy = "Admin";
    private string resolveNotes = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadComplaints();
    }

    private async Task LoadComplaints()
    {
        try
        {
            complaints = await ComplaintService.GetComplaintsAsync() ?? new List<Complaint>();
        }
        catch (TauriValidationException ex)
        {
            NotificationService.ShowError(ex.Message);
            complaints = new List<Complaint>();
        }
        catch (Exception ex)
        {
            NotificationService.ShowError("Failed to load complaints: " + ex.Message);
            complaints = new List<Complaint>();
        }
    }

    private void OpenAddModal()
    {
        newComplaint = new Complaint();
        showAddModal = true;
    }

    private async Task SaveComplaint()
    {
        try
        {
            await ComplaintService.SubmitComplaintAsync(newComplaint.Content);
            showAddModal = false;
            await LoadComplaints();
            NotificationService.ShowSuccess("Complaint submitted successfully.");
        }
        catch (TauriValidationException ex) { NotificationService.ShowError(ex.Message); }
        catch (Exception ex) { NotificationService.ShowError("Failed to submit complaint: " + ex.Message); }
    }

    private void OpenResolveModal(Complaint c)
    {
        selectedComplaint = c;
        resolveResolution = "";
        resolveBy = "Admin";
        resolveNotes = "";
        showResolveModal = true;
    }

    private async Task ConfirmResolve()
    {
        if (selectedComplaint == null || !selectedComplaint.Id.HasValue) return;
        try
        {
            await ComplaintService.ResolveComplaintAsync(selectedComplaint.Id.Value, "resolved", resolveResolution, resolveBy, resolveNotes);
            showResolveModal = false;
            await LoadComplaints();
            NotificationService.ShowSuccess("Complaint resolved successfully.");
        }
        catch (TauriValidationException ex) { NotificationService.ShowError(ex.Message); }
        catch (Exception ex) { NotificationService.ShowError("Failed to resolve complaint: " + ex.Message); }
    }

    private async Task DeleteComplaint(Complaint c)
    {
        if (c.Status != "resolved")
        {
            NotificationService.ShowWarning("Only resolved complaints can be deleted.");
            return;
        }
        
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to delete this complaint? This action cannot be undone.");
        if (!confirmed) return;
        
        if (!c.Id.HasValue) { NotificationService.ShowError("Complaint has no ID."); return; }
        
        try
        {
            await ComplaintService.DeleteComplaintAsync(c.Id.Value);
            await LoadComplaints();
            NotificationService.ShowSuccess("Complaint deleted.");
        }
        catch (TauriValidationException ex) { NotificationService.ShowError(ex.Message); }
        catch (Exception ex) { NotificationService.ShowError("Failed to delete complaint: " + ex.Message); }
    }
}
