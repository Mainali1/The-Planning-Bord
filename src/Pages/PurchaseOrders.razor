@page "/purchase-orders"
@attribute [Authorize(Roles = "CEO,Finance,Inventory")]
@inject IInventoryService InventoryService
@inject IPurchaseOrderService PurchaseOrderService
@inject IFinanceService FinanceService
@inject NotificationService NotificationService
@inject IJSRuntime JS
@inject IUserService UserService
@using ThePlanningBord.Models
@using System.Text.Json

<PageTitle>Purchase Orders - The Planning Bord</PageTitle>

<div class="flex flex-col h-full relative">
    <div class="flex justify-between items-center mb-6">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Purchase Orders</h3>
        <button @onclick="OpenCreateModal" class="flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
            âž• New Purchase Order
        </button>
    </div>

    <div class="flex-1 overflow-auto bg-white shadow rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">PO #</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Supplier</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Expected</th>
                    <th class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @if (purchaseOrders == null) { <tr><td colspan="7" class="px-6 py-4 text-center">Loading...</td></tr> }
                else if (!purchaseOrders.Any()) { <tr><td colspan="7" class="px-6 py-4 text-center">No purchase orders found.</td></tr> }
                else
                {
                    @foreach (var po in purchaseOrders)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">PO-@po.Id</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@po.OrderDate</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                @(suppliers.FirstOrDefault(s => s.Id == po.SupplierId)?.Name ?? $"ID: {po.SupplierId}")
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@po.TotalAmount.ToString("C")</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @GetStatusClass(po.Status)">
                                    @po.Status
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@po.ExpectedDeliveryDate</td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <button @onclick="() => ViewOrder(po)" class="text-blue-600 hover:text-blue-900 mr-3">View</button>
                                @if (po.Status == "Draft")
                                {
                                    <button @onclick="() => SendOrder(po)" class="text-green-600 hover:text-green-900 mr-3">Send</button>
                                }
                                @if (po.Status == "Sent")
                                {
                                    <button @onclick="() => ReceiveOrder(po)" class="text-indigo-600 hover:text-indigo-900">Receive</button>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@if (showModal)
{
    <div class="fixed z-10 inset-0 overflow-y-auto">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 transition-opacity" aria-hidden="true" @onclick="CloseModal">
                <div class="absolute inset-0 bg-gray-500 opacity-75"></div>
            </div>
            <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-4xl sm:w-full">
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <h3 class="text-lg leading-6 font-medium text-gray-900">@(isViewing ? $"Purchase Order PO-{editingPo.Id}" : "New Purchase Order")</h3>
                    
                    <div class="mt-4 grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Supplier</label>
                            @if (isViewing)
                            {
                                <div class="mt-1 text-sm text-gray-900">@(suppliers.FirstOrDefault(s => s.Id == editingPo.SupplierId)?.Name)</div>
                            }
                            else
                            {
                                <select @bind="editingPo.SupplierId" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm">
                                    <option value="0">-- Select Supplier --</option>
                                    @foreach (var s in suppliers.Where(x => x.IsActive))
                                    {
                                        <option value="@s.Id">@s.Name</option>
                                    }
                                </select>
                            }
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Expected Delivery</label>
                             @if (isViewing)
                            {
                                <div class="mt-1 text-sm text-gray-900">@editingPo.ExpectedDeliveryDate</div>
                            }
                            else
                            {
                                <input type="date" value="@editingPo.ExpectedDeliveryDate" @onchange="@(e => editingPo.ExpectedDeliveryDate = e.Value?.ToString())" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm" />
                            }
                        </div>
                        <div class="col-span-2">
                            <label class="block text-sm font-medium text-gray-700">Notes</label>
                             @if (isViewing)
                            {
                                <div class="mt-1 text-sm text-gray-900">@editingPo.Notes</div>
                            }
                            else
                            {
                                <textarea @bind="editingPo.Notes" rows="2" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm"></textarea>
                            }
                        </div>
                    </div>

                    <!-- Lines -->
                    <div class="mt-6 border-t border-gray-200 pt-4">
                        <h4 class="text-sm font-medium text-gray-900 mb-2">Order Items</h4>
                        
                        @if (!isViewing)
                        {
                            <div class="flex space-x-2 mb-4 p-4 bg-gray-50 rounded-md">
                                <div class="flex-1">
                                    <label class="block text-xs font-medium text-gray-500">Product</label>
                                    <select @bind="newLine.ProductId" class="block w-full border-gray-300 rounded-md shadow-sm text-sm">
                                        <option value="0">Select Product...</option>
                                        @foreach (var p in products)
                                        {
                                            <option value="@p.Id">@p.Name (Cost: @p.UnitPrice.ToString("C"))</option>
                                        }
                                    </select>
                                </div>
                                <div class="w-24">
                                    <label class="block text-xs font-medium text-gray-500">Qty</label>
                                    <input type="number" @bind="newLine.QuantityOrdered" class="block w-full border-gray-300 rounded-md shadow-sm text-sm" />
                                </div>
                                <div class="w-32">
                                    <label class="block text-xs font-medium text-gray-500">Unit Price</label>
                                    <input type="number" step="0.01" @bind="newLine.UnitPrice" class="block w-full border-gray-300 rounded-md shadow-sm text-sm" />
                                </div>
                                <div class="flex items-end">
                                    <button type="button" @onclick="AddLine" class="px-3 py-2 bg-blue-600 text-white rounded-md text-sm hover:bg-blue-700">Add</button>
                                </div>
                            </div>
                        }

                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500">Product</th>
                                    <th class="px-4 py-2 text-right text-xs font-medium text-gray-500">Qty</th>
                                    <th class="px-4 py-2 text-right text-xs font-medium text-gray-500">Unit Price</th>
                                    <th class="px-4 py-2 text-right text-xs font-medium text-gray-500">Total</th>
                                    @if (!isViewing) { <th class="px-4 py-2"></th> }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var line in currentLines)
                                {
                                    <tr>
                                        <td class="px-4 py-2 text-sm">
                                            @(products.FirstOrDefault(p => p.Id == line.ProductId)?.Name ?? "Unknown Product")
                                        </td>
                                        <td class="px-4 py-2 text-sm text-right">@line.QuantityOrdered</td>
                                        <td class="px-4 py-2 text-sm text-right">@line.UnitPrice.ToString("C")</td>
                                        <td class="px-4 py-2 text-sm text-right">@line.TotalPrice.ToString("C")</td>
                                        @if (!isViewing)
                                        {
                                            <td class="px-4 py-2 text-center">
                                                <button @onclick="() => RemoveLine(line)" class="text-red-600 hover:text-red-900 text-sm">Remove</button>
                                            </td>
                                        }
                                    </tr>
                                }
                                <tr class="bg-gray-50 font-bold">
                                    <td colspan="3" class="px-4 py-2 text-right text-sm">Total:</td>
                                    <td class="px-4 py-2 text-right text-sm">@currentLines.Sum(l => l.TotalPrice).ToString("C")</td>
                                    @if (!isViewing) { <td></td> }
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                    @if (!isViewing)
                    {
                        <button type="button" @onclick="SaveOrder" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-indigo-600 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none sm:ml-3 sm:w-auto sm:text-sm">
                            Create Order
                        </button>
                    }
                    <button type="button" @onclick="CloseModal" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<PurchaseOrder> purchaseOrders = new();
    private List<Supplier> suppliers = new();
    private List<Product> products = new();
    
    private bool showModal = false;
    private bool isViewing = false;
    private PurchaseOrder editingPo = new();
    private List<PurchaseOrderLine> currentLines = new();
    private PurchaseOrderLine newLine = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            suppliers = await InventoryService.GetSuppliersAsync();
            var pagedProducts = await InventoryService.GetProductsAsync(null, 1, 1000); // Fetch all for dropdown
            products = pagedProducts.Items;
            purchaseOrders = await PurchaseOrderService.GetPurchaseOrdersAsync();
        }
        catch (Exception ex)
        {
            NotificationService.ShowError($"Failed to load data: {ex.Message}");
        }
    }

    private void OpenCreateModal()
    {
        editingPo = new PurchaseOrder 
        { 
            Status = "Draft",
            OrderDate = DateTime.Now.ToString("yyyy-MM-dd")
        };
        currentLines = new();
        newLine = new();
        isViewing = false;
        showModal = true;
    }

    private void ViewOrder(PurchaseOrder po)
    {
        editingPo = po;
        currentLines = po.Lines ?? new();
        isViewing = true;
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
    }

    private void AddLine()
    {
        if (newLine.ProductId == 0 || newLine.ProductId == null) return;
        if (newLine.QuantityOrdered <= 0) return;

        // Auto-fill price if not set
        if (newLine.UnitPrice <= 0)
        {
             var product = products.FirstOrDefault(p => p.Id == newLine.ProductId);
             if (product != null) newLine.UnitPrice = product.UnitPrice;
        }

        newLine.TotalPrice = newLine.QuantityOrdered * newLine.UnitPrice;
        
        // Clone to avoid reference issues
        currentLines.Add(new PurchaseOrderLine 
        {
            ProductId = newLine.ProductId,
            QuantityOrdered = newLine.QuantityOrdered,
            UnitPrice = newLine.UnitPrice,
            TotalPrice = newLine.TotalPrice
        });

        // Reset inputs but keep product selection for quick entry
        var lastProductId = newLine.ProductId;
        newLine = new PurchaseOrderLine { ProductId = lastProductId };
    }

    private void RemoveLine(PurchaseOrderLine line)
    {
        currentLines.Remove(line);
    }

    private async Task SaveOrder()
    {
        if (editingPo.SupplierId == null || editingPo.SupplierId == 0)
        {
            NotificationService.ShowError("Please select a supplier.");
            return;
        }

        if (!currentLines.Any())
        {
            NotificationService.ShowError("Please add at least one item.");
            return;
        }

        editingPo.Lines = currentLines;
        editingPo.TotalAmount = currentLines.Sum(l => l.TotalPrice);

        try
        {
            await PurchaseOrderService.CreatePurchaseOrderAsync(editingPo);
            NotificationService.ShowSuccess("Purchase Order created successfully.");
            await LoadData();
            CloseModal();
        }
        catch (Exception ex)
        {
            NotificationService.ShowError($"Error creating PO: {ex.Message}");
        }
    }

    private async Task SendOrder(PurchaseOrder po)
    {
        if (!await JS.InvokeAsync<bool>("confirm", "Mark this order as Sent?")) return;
        try
        {
            await PurchaseOrderService.UpdatePurchaseOrderStatusAsync(po.Id ?? 0, "Sent");
            await LoadData();
            NotificationService.ShowSuccess("Order marked as Sent.");
        }
        catch (Exception ex)
        {
            NotificationService.ShowError(ex.Message);
        }
    }

    private async Task ReceiveOrder(PurchaseOrder po)
    {
         if (!await JS.InvokeAsync<bool>("confirm", "Receive all items in this order? This will update inventory.")) return;
         
         try
         {
             await PurchaseOrderService.ReceivePurchaseOrderAsync(po.Id ?? 0);
             await LoadData();
             NotificationService.ShowSuccess("Order received and inventory updated.");
         }
         catch (Exception ex)
         {
             NotificationService.ShowError($"Error receiving order: {ex.Message}");
         }
    }

    private string GetStatusClass(string status)
    {
        return status switch
        {
            "Draft" => "bg-gray-100 text-gray-800",
            "Sent" => "bg-blue-100 text-blue-800",
            "Received" => "bg-green-100 text-green-800",
            "Cancelled" => "bg-red-100 text-red-800",
            _ => "bg-gray-100 text-gray-800"
        };
    }
}
