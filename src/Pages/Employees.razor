@page "/employees"
@inject ITauriService AppService

<PageTitle>Employees - The Planning Bord</PageTitle>

<div class="flex flex-col h-full relative">
    <div class="flex justify-between items-center mb-6">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Employee Directory</h3>
        <button @onclick="OpenAddModal" class="px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
            âž• New Employee
        </button>
    </div>

    <div class="flex-1 overflow-auto bg-white shadow rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Role</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @if (employees == null) { <tr><td colspan="5" class="px-6 py-4 text-center">Loading...</td></tr> }
                else if (!employees.Any()) { <tr><td colspan="5" class="px-6 py-4 text-center">No employees found.</td></tr> }
                else
                {
                    @foreach (var e in employees)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@e.FirstName @e.LastName</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@e.Role</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@e.Email</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @(e.Status == "active" ? "bg-green-100 text-green-800" : "bg-gray-100 text-gray-800")">
                                    @e.Status
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <button @onclick="() => EditEmployee(e)" class="text-blue-600 hover:text-blue-900 mr-3">Edit</button>
                                <button @onclick="() => DeleteEmployee(e.Id ?? 0)" class="text-red-600 hover:text-red-900">Delete</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@if (showAddModal)
{
    <div class="fixed z-10 inset-0 overflow-y-auto">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 transition-opacity"><div class="absolute inset-0 bg-gray-500 opacity-75"></div></div>
            <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <h3 class="text-lg leading-6 font-medium text-gray-900">@((newEmployee.Id.HasValue ? "Edit" : "Add")) Employee</h3>
                    <div class="mt-4 grid grid-cols-1 gap-y-4">
                        <div class="grid grid-cols-2 gap-4">
                            <input type="text" @bind="newEmployee.FirstName" placeholder="First Name" class="block w-full border-gray-300 rounded-md shadow-sm" />
                            <input type="text" @bind="newEmployee.LastName" placeholder="Last Name" class="block w-full border-gray-300 rounded-md shadow-sm" />
                        </div>
                        <input type="email" @bind="newEmployee.Email" placeholder="Email" class="block w-full border-gray-300 rounded-md shadow-sm" />
                        <input type="text" @bind="newEmployee.Role" placeholder="Role" class="block w-full border-gray-300 rounded-md shadow-sm" />
                        <select @bind="newEmployee.Status" class="block w-full border-gray-300 rounded-md shadow-sm">
                            <option value="active">Active</option>
                            <option value="inactive">Inactive</option>
                            <option value="on_leave">On Leave</option>
                        </select>
                    </div>
                </div>
                <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                    <button type="button" @onclick="SaveEmployee" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-blue-600 text-base font-medium text-white hover:bg-blue-700 sm:ml-3 sm:w-auto sm:text-sm">Save</button>
                    <button type="button" @onclick="() => showAddModal = false" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Employee>? employees;
    private bool showAddModal = false;
    private Employee newEmployee = new Employee();

    protected override async Task OnInitializedAsync()
    {
        await LoadEmployees();
    }

    private async Task LoadEmployees()
    {
        try { employees = await AppService.GetEmployeesAsync(); }
        catch (Exception ex) { Console.WriteLine(ex.Message); employees = new List<Employee>(); }
    }

    private void OpenAddModal()
    {
        newEmployee = new Employee();
        showAddModal = true;
    }

    private void EditEmployee(Employee e)
    {
        newEmployee = new Employee { Id = e.Id, FirstName = e.FirstName, LastName = e.LastName, Email = e.Email, Phone = e.Phone, Role = e.Role, Department = e.Department, Position = e.Position, Salary = e.Salary, Status = e.Status };
        showAddModal = true;
    }

    private async Task SaveEmployee()
    {
        try
        {
            if (newEmployee.Id.HasValue) await AppService.UpdateEmployeeAsync(newEmployee);
            else await AppService.AddEmployeeAsync(newEmployee);
            showAddModal = false;
            await LoadEmployees();
        }
        catch (Exception ex) { Console.WriteLine(ex.Message); }
    }

    private async Task DeleteEmployee(int id)
    {
        if (id == 0) return;
        try { await AppService.DeleteEmployeeAsync(id); await LoadEmployees(); }
        catch (Exception ex) { Console.WriteLine(ex.Message); }
    }
}
