@page "/employees"
@attribute [Authorize]
@inject IHrService HrService
@inject IUserService UserService
@inject NotificationService NotificationService
@inject IJSRuntime JSRuntime
@using ThePlanningBord.Models
@using ThePlanningBord.Services
@using Microsoft.JSInterop

<PageTitle>Employees - The Planning Bord</PageTitle>

<div class="flex flex-col h-full relative">
    <div class="flex justify-between items-center mb-6">
        <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-white">Employee Directory</h3>
        <div class="flex items-center space-x-4">
            <div class="relative">
                <span class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-gray-400">
                    <i class="fas fa-search"></i>
                </span>
                <input type="text" @bind="searchTerm" @bind:event="oninput" placeholder="Search employees..." class="block w-64 pl-10 pr-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md leading-5 bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" />
            </div>
            <div class="flex bg-gray-100 dark:bg-gray-900 p-1 rounded-md">
                <button @onclick='() => viewMode = "grid"' class="px-3 py-1 text-sm font-medium rounded-md @(viewMode == "grid" ? "bg-white dark:bg-gray-700 shadow text-blue-600 dark:text-blue-400" : "text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300")">
                    <i class="fas fa-th-large"></i>
                </button>
                <button @onclick='() => viewMode = "list"' class="px-3 py-1 text-sm font-medium rounded-md @(viewMode == "list" ? "bg-white dark:bg-gray-700 shadow text-blue-600 dark:text-blue-400" : "text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300")">
                    <i class="fas fa-list"></i>
                </button>
            </div>
            <div class="space-x-2">
                <button @onclick="OpenInviteModal" class="px-4 py-2 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-md text-gray-700 dark:text-gray-200 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                    ðŸŽ« Generate Invite
                </button>
                <button @onclick="OpenAddModal" class="px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                    âž• New Employee
                </button>
            </div>
        </div>
    </div>

    <div class="flex-1 overflow-auto bg-white dark:bg-gray-800 shadow rounded-lg flex flex-col border border-gray-200 dark:border-gray-700">
        <!-- Tabs -->
        <div class="border-b border-gray-200 dark:border-gray-700">
            <nav class="-mb-px flex" aria-label="Tabs">
                <button @onclick='() => activeTab = "employees"' class="@(activeTab == "employees" ? "border-blue-500 text-blue-600 dark:text-blue-400" : "border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600") w-1/4 py-4 px-1 text-center border-b-2 font-medium text-sm">
                    Employees
                </button>
                <button @onclick='() => activeTab = "invitations"' class="@(activeTab == "invitations" ? "border-blue-500 text-blue-600 dark:text-blue-400" : "border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600") w-1/4 py-4 px-1 text-center border-b-2 font-medium text-sm">
                    Invitations
                </button>
            </nav>
        </div>

        <!-- Content -->
        <div class="flex-1 overflow-auto p-4">
            @if (activeTab == "employees")
            {
                @if (viewMode == "grid")
                {
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                        @if (employees == null)
                        {
                            @for (int i = 0; i < 8; i++)
                            {
                                <div class="animate-pulse bg-gray-50 dark:bg-gray-900 rounded-lg p-6 border border-gray-100 dark:border-gray-700">
                                    <div class="flex items-center space-x-4 mb-4">
                                        <div class="rounded-full bg-gray-200 dark:bg-gray-700 h-12 w-12"></div>
                                        <div class="flex-1 space-y-2">
                                            <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-3/4"></div>
                                            <div class="h-3 bg-gray-200 dark:bg-gray-700 rounded w-1/2"></div>
                                        </div>
                                    </div>
                                    <div class="space-y-2">
                                        <div class="h-3 bg-gray-200 dark:bg-gray-700 rounded"></div>
                                        <div class="h-3 bg-gray-200 dark:bg-gray-700 rounded w-5/6"></div>
                                    </div>
                                </div>
                            }
                        }
                        else if (!FilteredEmployees.Any())
                        {
                            <div class="col-span-full py-12 text-center text-gray-500 dark:text-gray-400">No employees found matching your criteria.</div>
                        }
                        else
                        {
                            @foreach (var e in FilteredEmployees)
                            {
                                <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg shadow-sm hover:shadow-md transition-shadow p-6 flex flex-col relative group">
                                    <div class="absolute top-4 right-4 flex space-x-1 opacity-0 group-hover:opacity-100 transition-opacity">
                                        <button @onclick="() => EditEmployee(e)" class="p-1 text-blue-600 dark:text-blue-400 hover:bg-blue-50 dark:hover:bg-blue-900 rounded"><i class="fas fa-edit"></i></button>
                                        <button @onclick="() => QuickDeleteEmployee(e)" class="p-1 text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900 rounded"><i class="fas fa-trash"></i></button>
                                    </div>
                                    <div class="flex items-center space-x-4 mb-4">
                                        <div class="h-14 w-14 rounded-full bg-blue-100 dark:bg-blue-900 flex items-center justify-center text-blue-700 dark:text-blue-100 text-xl font-bold">
                                            @GetInitials($"{e.FirstName} {e.LastName}")
                                        </div>
                                        <div>
                                            <h4 class="text-lg font-semibold text-gray-900 dark:text-white">@e.FirstName @e.LastName</h4>
                                            <p class="text-sm text-gray-500 dark:text-gray-400">@e.Position</p>
                                        </div>
                                    </div>
                                    <div class="space-y-3 flex-1">
                                        <div class="flex items-center text-sm text-gray-600 dark:text-gray-300">
                                            <i class="fas fa-envelope w-5 text-gray-400 dark:text-gray-500"></i>
                                            <span class="truncate">@e.Email</span>
                                        </div>
                                        <div class="flex items-center text-sm text-gray-600 dark:text-gray-300">
                                            <i class="fas fa-building w-5 text-gray-400 dark:text-gray-500"></i>
                                            <span>@e.Department</span>
                                        </div>
                                        <div class="flex items-center text-sm text-gray-600 dark:text-gray-300">
                                            <i class="fas fa-user-tag w-5 text-gray-400 dark:text-gray-500"></i>
                                            <span class="px-2 py-0.5 rounded-full text-xs font-medium bg-blue-50 dark:bg-blue-900 text-blue-700 dark:text-blue-100">@e.Role</span>
                                        </div>
                                    </div>
                                    <div class="mt-6 pt-4 border-t border-gray-100 dark:border-gray-700 flex justify-between items-center">
                                        <span class="px-2.5 py-0.5 rounded-full text-xs font-medium @(e.Status == "active" ? "bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-100" : "bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200")">
                                            @e.Status
                                        </span>
                                        <button class="text-xs font-medium text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300" @onclick="() => EditEmployee(e)">View Profile</button>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                }
                else
                {
                    <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden">
                        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                            <thead class="bg-gray-50 dark:bg-gray-900">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Name</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Role</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Email</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Status</th>
                                    <th class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
                                </tr>
                            </thead>
                            <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                                @if (employees == null) { <tr><td colspan="5" class="px-6 py-4 text-center dark:text-gray-400">Loading...</td></tr> }
                                else if (!FilteredEmployees.Any()) { <tr><td colspan="5" class="px-6 py-4 text-center dark:text-gray-400">No employees found.</td></tr> }
                                else
                                {
                                    <Virtualize Items="@FilteredEmployees.ToList()" Context="e" ItemSize="56">
                                        <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <div class="flex items-center">
                                                    <div class="h-8 w-8 rounded-full bg-blue-100 dark:bg-blue-900 flex items-center justify-center text-blue-700 dark:text-blue-100 text-xs font-bold mr-3">
                                                        @GetInitials($"{e.FirstName} {e.LastName}")
                                                    </div>
                                                    <div class="text-sm font-medium text-gray-900 dark:text-white">@e.FirstName @e.LastName</div>
                                                </div>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">@e.Role</td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">@e.Email</td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @(e.Status == "active" ? "bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-100" : "bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200")">@e.Status</span>
                                            </td>
                                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                                <button @onclick="() => EditEmployee(e)" class="text-blue-600 dark:text-blue-400 hover:text-blue-900 dark:hover:text-blue-300 mr-3">Edit</button>
                                                <button type="button" @onclick="() => QuickDeleteEmployee(e)" class="text-red-600 dark:text-red-400 hover:text-red-900 dark:hover:text-red-300">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    </Virtualize>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            }
            else if (activeTab == "invitations")
            {
                <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden">
                    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                        <thead class="bg-gray-50 dark:bg-gray-900">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Email</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Role</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Created</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Status</th>
                                <th class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
                            </tr>
                        </thead>
                        <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                            @if (invites == null) { <tr><td colspan="5" class="px-6 py-4 text-center dark:text-gray-400">Loading invites...</td></tr> }
                            else if (!invites.Any()) { <tr><td colspan="5" class="px-6 py-4 text-center dark:text-gray-400">No invitations found.</td></tr> }
                            else
                            {
                                <Virtualize Items="@invites" Context="i" ItemSize="56">
                                    <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">@i.Email</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">@i.Role</td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">@i.Expiration (Active)</td>
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @(i.IsUsed ? "bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-100" : (i.IsActive ? "bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-100" : "bg-red-100 dark:bg-red-900 text-red-800 dark:text-red-100"))">@(i.IsUsed ? "Used" : (i.IsActive ? "Active" : "Disabled"))</span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                            @if (!i.IsUsed)
                                            {
                                                <button @onclick="() => ToggleInviteStatus(i)" class="@(i.IsActive ? "text-red-600 dark:text-red-400 hover:text-red-900 dark:hover:text-red-300" : "text-green-600 dark:text-green-400 hover:text-green-900 dark:hover:text-green-300")">@(i.IsActive ? "Disable" : "Enable")</button>
                                            }
                                        </td>
                                    </tr>
                                </Virtualize>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@if (showAddModal)
{
    <div class="fixed z-10 inset-0 overflow-y-auto" role="dialog" aria-modal="true" aria-labelledby="modal-title-employee">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 transition-opacity" @onclick="() => showAddModal = false">
                <div class="absolute inset-0 bg-gray-500/75 dark:bg-gray-900/80"></div>
            </div>
            <div class="inline-block align-bottom bg-white dark:bg-gray-800 rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full border border-gray-200 dark:border-gray-700">
                <div class="bg-white dark:bg-gray-800 px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white" id="modal-title-employee">@((newEmployee.Id.HasValue ? "Edit" : "Add")) Employee</h3>
                    <div class="mt-4 grid grid-cols-1 gap-y-4">
                        <div class="grid grid-cols-2 gap-4">
                            <input type="text" @bind="newEmployee.FirstName" placeholder="First Name" class="block w-full border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 px-3 py-2 transition-colors" />
                            <input type="text" @bind="newEmployee.LastName" placeholder="Last Name" class="block w-full border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 px-3 py-2 transition-colors" />
                        </div>
                        <input type="email" @bind="newEmployee.Email" placeholder="Email" class="block w-full border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 px-3 py-2 transition-colors" />
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-xs text-gray-500 dark:text-gray-400 mb-1">Role</label>
                                <select @bind="newEmployee.Role" class="block w-full border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 px-3 py-2 transition-colors">
                                    <option value="Employee">Employee</option>
                                    <option value="Manager">Manager</option>
                                    <option value="CEO">CEO</option>
                                    <option value="Technical">Technical</option>
                                    <option value="HR">HR</option>
                                </select>
                            </div>
                            <div>
                                <label class="block text-xs text-gray-500 dark:text-gray-400 mb-1">Status</label>
                                <select @bind="newEmployee.Status" class="block w-full border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 px-3 py-2 transition-colors">
                                    <option value="active">Active</option>
                                    <option value="inactive">Inactive</option>
                                    <option value="on_leave">On Leave</option>
                                </select>
                            </div>
                        </div>
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-xs text-gray-500 dark:text-gray-400 mb-1">Department</label>
                                <input type="text" @bind="newEmployee.Department" placeholder="Department" class="block w-full border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 px-3 py-2 transition-colors" />
                            </div>
                            <div>
                                <label class="block text-xs text-gray-500 dark:text-gray-400 mb-1">Position</label>
                                <input type="text" @bind="newEmployee.Position" placeholder="Position" class="block w-full border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 px-3 py-2 transition-colors" />
                            </div>
                        </div>
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-xs text-gray-500 dark:text-gray-400 mb-1">Manager</label>
                                <select @bind="newEmployee.ManagerId" class="block w-full border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 px-3 py-2 transition-colors">
                                    <option value="">None</option>
                                    @if (employees != null)
                                    {
                                        @foreach (var emp in employees.Where(e => e.Id != newEmployee.Id))
                                        {
                                            <option value="@emp.Id">@emp.FirstName @emp.LastName</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div>
                                <label class="block text-xs text-gray-500 dark:text-gray-400 mb-1">Hire Date</label>
                                <input type="date" @bind="HireDateBind" class="block w-full border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 px-3 py-2 transition-colors" />
                            </div>
                        </div>
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-xs text-gray-500 dark:text-gray-400 mb-1">Salary (Annual)</label>
                                <input type="number" @bind="newEmployee.Salary" placeholder="Salary" class="block w-full border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 px-3 py-2 transition-colors" />
                            </div>
                            <div>
                                <label class="block text-xs text-gray-500 dark:text-gray-400 mb-1">Hourly Cost</label>
                                <input type="number" step="0.01" @bind="newEmployee.HourlyCost" placeholder="Hourly Cost" class="block w-full border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 px-3 py-2 transition-colors" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="bg-gray-50 dark:bg-gray-900 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse border-t border-gray-200 dark:border-gray-700">
                    <button type="button" @onclick="SaveEmployee" disabled="@isLoading" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-blue-600 text-base font-medium text-white hover:bg-blue-700 sm:ml-3 sm:w-auto sm:text-sm dark:bg-blue-500 dark:hover:bg-blue-600 transition-colors disabled:opacity-50 disabled:cursor-not-allowed">
                        @if (isLoading)
                        {
                            <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                        }
                        Save
                    </button>
                    <button type="button" @onclick="() => showAddModal = false" disabled="@isLoading" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 dark:border-gray-600 shadow-sm px-4 py-2 bg-white dark:bg-gray-700 text-base font-medium text-gray-700 dark:text-gray-200 hover:bg-gray-50 dark:hover:bg-gray-600 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm transition-colors disabled:opacity-50 disabled:cursor-not-allowed">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}

@if (showDeleteModal)
{
    <div class="fixed z-10 inset-0 overflow-y-auto" role="dialog" aria-modal="true" aria-labelledby="modal-title-delete">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 transition-opacity" @onclick="() => showDeleteModal = false">
                <div class="absolute inset-0 bg-gray-500/75 dark:bg-gray-900/80"></div>
            </div>
            <div class="inline-block align-bottom bg-white dark:bg-gray-800 rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full border border-gray-200 dark:border-gray-700">
                <div class="bg-white dark:bg-gray-800 px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <div class="sm:flex sm:items-start">
                        <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-red-100 dark:bg-red-900 sm:mx-0 sm:h-10 sm:w-10">
                            <svg class="h-6 w-6 text-red-600 dark:text-red-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                            </svg>
                        </div>
                        <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                            <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white" id="modal-title-delete">Delete Employee</h3>
                            <div class="mt-2">
                                <p class="text-sm text-gray-500 dark:text-gray-400">Are you sure you want to delete @(employeeToDelete?.FirstName) @(employeeToDelete?.LastName)? This action cannot be undone.</p>
                            </div>
                        </div>
                    </div>
