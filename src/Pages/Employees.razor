@page "/employees"
@attribute [Authorize]
@inject IHrService HrService
@inject IUserService UserService
@inject NotificationService NotificationService
@inject IJSRuntime JSRuntime
@using ThePlanningBord.Models
@using ThePlanningBord.Services
@using Microsoft.JSInterop

<PageTitle>Employees - The Planning Bord</PageTitle>

<div class="flex flex-col h-full relative">
    <div class="flex justify-between items-center mb-6">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Employee Directory</h3>
        <div class="space-x-2">
            <button @onclick="OpenInviteModal" class="px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                ðŸŽ« Generate Invite
            </button>
            <button @onclick="OpenAddModal" class="px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                âž• New Employee
            </button>
        </div>
    </div>

    <div class="flex-1 overflow-auto bg-white shadow rounded-lg flex flex-col">
        <!-- Tabs -->
        <div class="border-b border-gray-200">
            <nav class="-mb-px flex" aria-label="Tabs">
                <button @onclick='() => activeTab = "employees"' class="@(activeTab == "employees" ? "border-blue-500 text-blue-600" : "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300") w-1/4 py-4 px-1 text-center border-b-2 font-medium text-sm">
                    Employees
                </button>
                <button @onclick='() => activeTab = "invitations"' class="@(activeTab == "invitations" ? "border-blue-500 text-blue-600" : "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300") w-1/4 py-4 px-1 text-center border-b-2 font-medium text-sm">
                    Invitations
                </button>
            </nav>
        </div>

        <!-- Content -->
        <div class="flex-1 overflow-auto">
            @if (activeTab == "employees")
            {
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Role</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                            <th class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @if (employees == null) { <tr><td colspan="5" class="px-6 py-4 text-center">Loading...</td></tr> }
                        else if (!FilteredEmployees.Any()) { <tr><td colspan="5" class="px-6 py-4 text-center">No employees found.</td></tr> }
                        else
                        {
                            <Virtualize Items="@FilteredEmployees.ToList()" Context="e" ItemSize="56">
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@e.FirstName @e.LastName</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@e.Role</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@e.Email</td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @(e.Status == "active" ? "bg-green-100 text-green-800" : "bg-gray-100 text-gray-800")">@e.Status</span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                        <button @onclick="() => EditEmployee(e)" class="text-blue-600 hover:text-blue-900 mr-3">Edit</button>
                                        <button type="button" @onclick:preventDefault @onclick:stopPropagation @onclick="() => QuickDeleteEmployee(e)" class="text-red-600 hover:text-red-900" title="Delete Employee">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3m-7 4h16" />
                                            </svg>
                                        </button>
                                    </td>
                                </tr>
                            </Virtualize>
                        }
                    </tbody>
                </table>
            }
            else if (activeTab == "invitations")
            {
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Role</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                            <th class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @if (invites == null) { <tr><td colspan="5" class="px-6 py-4 text-center">Loading invites...</td></tr> }
                        else if (!invites.Any()) { <tr><td colspan="5" class="px-6 py-4 text-center">No invitations found.</td></tr> }
                        else
                        {
                            <Virtualize Items="@invites" Context="i" ItemSize="56">
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@i.Email</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@i.Role</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@i.Expiration (Active)</td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @(i.IsUsed ? "bg-blue-100 text-blue-800" : (i.IsActive ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800"))">@(i.IsUsed ? "Used" : (i.IsActive ? "Active" : "Disabled"))</span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                        @if (!i.IsUsed)
                                        {
                                            <button @onclick="() => ToggleInviteStatus(i)" class="@(i.IsActive ? "text-red-600 hover:text-red-900" : "text-green-600 hover:text-green-900")">@(i.IsActive ? "Disable" : "Enable")</button>
                                        }
                                    </td>
                                </tr>
                            </Virtualize>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

@if (showAddModal)
{
    <div class="fixed z-10 inset-0 overflow-y-auto">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 transition-opacity"><div class="absolute inset-0 bg-gray-500 opacity-75"></div></div>
            <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <h3 class="text-lg leading-6 font-medium text-gray-900">@((newEmployee.Id.HasValue ? "Edit" : "Add")) Employee</h3>
                    <div class="mt-4 grid grid-cols-1 gap-y-4">
                        <div class="grid grid-cols-2 gap-4">
                            <input type="text" @bind="newEmployee.FirstName" placeholder="First Name" class="block w-full border-gray-300 rounded-md shadow-sm" />
                            <input type="text" @bind="newEmployee.LastName" placeholder="Last Name" class="block w-full border-gray-300 rounded-md shadow-sm" />
                        </div>
                        <input type="email" @bind="newEmployee.Email" placeholder="Email" class="block w-full border-gray-300 rounded-md shadow-sm" />
                        <select @bind="newEmployee.Role" class="block w-full border-gray-300 rounded-md shadow-sm">
                            <option value="Employee">Employee</option>
                            <option value="Manager">Manager</option>
                            <option value="CEO">CEO</option>
                            <option value="Technical">Technical</option>
                        </select>
                        <select @bind="newEmployee.Status" class="block w-full border-gray-300 rounded-md shadow-sm">
                            <option value="active">Active</option>
                            <option value="inactive">Inactive</option>
                            <option value="on_leave">On Leave</option>
                        </select>
                    </div>
                </div>
                <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                    <button type="button" @onclick="SaveEmployee" disabled="@isLoading" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-blue-600 text-base font-medium text-white hover:bg-blue-700 sm:ml-3 sm:w-auto sm:text-sm disabled:opacity-50 disabled:cursor-not-allowed">
                        @if (isLoading)
                        {
                            <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                        }
                        Save
                    </button>
                    <button type="button" @onclick="() => showAddModal = false" disabled="@isLoading" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm disabled:opacity-50 disabled:cursor-not-allowed">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}

@if (showDeleteModal)
{
    <div class="fixed z-10 inset-0 overflow-y-auto">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 transition-opacity"><div class="absolute inset-0 bg-gray-500 opacity-75"></div></div>
            <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <div class="sm:flex sm:items-start">
                        <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-red-100 sm:mx-0 sm:h-10 sm:w-10">
                            <svg class="h-6 w-6 text-red-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                            </svg>
                        </div>
                        <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                            <h3 class="text-lg leading-6 font-medium text-gray-900">Delete Employee</h3>
                            <div class="mt-2">
                                <p class="text-sm text-gray-500">Are you sure you want to delete @(employeeToDelete?.FirstName) @(employeeToDelete?.LastName)? This action cannot be undone.</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                    <button type="button" @onclick="DeleteEmployee" disabled="@isDeleting" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 sm:ml-3 sm:w-auto sm:text-sm disabled:opacity-50 disabled:cursor-not-allowed" autofocus>
                        @if (isLoading)
                        {
                            <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                        }
                        Confirm Delete
                    </button>
                    <button type="button" @onclick="() => showDeleteModal = false" disabled="@isDeleting" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm disabled:opacity-50 disabled:cursor-not-allowed">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}

@if (showInviteModal)
{
    <div class="fixed z-10 inset-0 overflow-y-auto">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 transition-opacity"><div class="absolute inset-0 bg-gray-500 opacity-75"></div></div>
            <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <h3 class="text-lg leading-6 font-medium text-gray-900">Generate Invite Token</h3>
                    @if (string.IsNullOrEmpty(generatedToken))
                    {
                        <div class="mt-4 grid grid-cols-1 gap-y-4">
                            <input type="text" @bind="inviteName" placeholder="Full Name" class="block w-full border-gray-300 rounded-md shadow-sm" />
                            <input type="email" @bind="inviteEmail" placeholder="Email" class="block w-full border-gray-300 rounded-md shadow-sm" />
                            <input type="text" @bind="inviteRole" placeholder="Role (e.g. Employee, Manager)" class="block w-full border-gray-300 rounded-md shadow-sm" />
                        </div>
                    }
                    else
                    {
                        <div class="mt-4">
                            <p class="text-sm text-gray-500 mb-2">Share this token with the employee:</p>
                            <textarea readonly class="w-full p-2 border rounded bg-gray-50 text-xs font-mono h-24" @onclick="CopyToken">@generatedToken</textarea>
                            <p class="text-xs text-green-600 mt-1">@copyMessage</p>
                        </div>
                    }
                </div>
                <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                    @if (string.IsNullOrEmpty(generatedToken))
                    {
                        <button type="button" @onclick="GenerateToken" disabled="@isLoading" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-blue-600 text-base font-medium text-white hover:bg-blue-700 sm:ml-3 sm:w-auto sm:text-sm disabled:opacity-50">
                            @if (isLoading) { <span>Generating...</span> } else { <span>Generate</span> }
                        </button>
                    }
                    <button type="button" @onclick="CloseInviteModal" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Employee>? employees;
    private bool showAddModal = false;
    private bool showDeleteModal = false;
    private bool showInviteModal = false;
    private bool isLoading = false;
    private bool isDeleting = false;
    private Employee newEmployee = new Employee();
    private Employee? employeeToDelete;
    private string searchTerm = "";

    // Invite fields
    private string inviteName = "";
    private string inviteEmail = "";
    private string inviteRole = "Employee";
    private string generatedToken = "";
    private string copyMessage = "";

    private void OpenInviteModal()
    {
        inviteName = "";
        inviteEmail = "";
        inviteRole = "Employee";
        generatedToken = "";
        copyMessage = "";
        showInviteModal = true;
    }

    private void CloseInviteModal()
    {
        showInviteModal = false;
    }

    private async Task GenerateToken()
    {
        if (string.IsNullOrWhiteSpace(inviteName) || string.IsNullOrWhiteSpace(inviteEmail) || string.IsNullOrWhiteSpace(inviteRole))
        {
            NotificationService.ShowError("All fields are required.", "Validation Error");
            return;
        }

        isLoading = true;
        try
        {
            // Pass 0 for expiration to indicate permanent token
            generatedToken = await UserService.GenerateInviteTokenAsync(inviteRole, inviteName, inviteEmail, 0);
        }
        catch (TauriValidationException ex)
        {
            NotificationService.ShowError(ex.Message);
        }
        catch (Exception ex)
        {
            NotificationService.ShowError(ex.Message, "Error");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task CopyToken()
    {
        try
        {
            if (!string.IsNullOrWhiteSpace(generatedToken))
            {
                await JSRuntime.InvokeVoidAsync("copyToClipboard", generatedToken);
                copyMessage = "Token copied to clipboard!";
                StateHasChanged();
                await Task.Delay(3000);
                copyMessage = "";
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            NotificationService.ShowError("Failed to copy token: " + ex.Message);
        }
    }

    private IEnumerable<Employee> FilteredEmployees => 
        string.IsNullOrWhiteSpace(searchTerm) 
            ? (employees ?? Enumerable.Empty<Employee>()) 
            : (employees ?? Enumerable.Empty<Employee>())
                .Where(e => (e.FirstName?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false) || 
                            (e.LastName?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
                            (e.Email?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
                            (e.Role?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false));

    private string activeTab = "employees";
    private List<Invite>? invites;

    protected override async Task OnInitializedAsync()
    {
        await LoadEmployees();
        await LoadInvites();
    }

    private async Task LoadInvites()
    {
        try 
        { 
            invites = await UserService.GetInvitesAsync(); 
        }
        catch (TauriValidationException ex)
        {
            NotificationService.ShowError(ex.Message);
            invites = new List<Invite>();
        }
        catch (Exception ex) 
        { 
            NotificationService.ShowError($"Failed to load invites: {ex.Message}");
            invites = new List<Invite>(); 
        }
    }

    private async Task ToggleInviteStatus(Invite invite)
    {
        if (invite.Id == null) return;
        try
        {
            await UserService.ToggleInviteStatusAsync(invite.Id.Value, !invite.IsActive);
            await LoadInvites();
            NotificationService.ShowSuccess($"Invite {(invite.IsActive ? "disabled" : "enabled")} successfully.");
        }
        catch (TauriValidationException ex)
        {
            NotificationService.ShowError(ex.Message);
        }
        catch (Exception ex)
        {
            NotificationService.ShowError($"Failed to update invite status: {ex.Message}");
        }
    }

    private async Task LoadEmployees()
    {
        try { employees = await HrService.GetEmployeesAsync() ?? new List<Employee>(); }
        catch (TauriValidationException ex) { NotificationService.ShowError(ex.Message); employees = new List<Employee>(); }
        catch (Exception ex) { NotificationService.ShowError($"Failed to load employees: {ex.Message}"); employees = new List<Employee>(); }
    }

    private void OpenAddModal()
    {
        newEmployee = new Employee();
        showAddModal = true;
    }

    private void EditEmployee(Employee e)
    {
        newEmployee = new Employee { Id = e.Id, FirstName = e.FirstName, LastName = e.LastName, Email = e.Email, Phone = e.Phone, Role = e.Role, Department = e.Department, Position = e.Position, Salary = e.Salary, Status = e.Status };
        showAddModal = true;
    }

    private async Task SaveEmployee()
    {
        isLoading = true;
        try
        {
            if (string.IsNullOrWhiteSpace(newEmployee.FirstName) || string.IsNullOrWhiteSpace(newEmployee.LastName))
            {
                NotificationService.ShowError("First Name and Last Name are required.");
                return;
            }

            if (newEmployee.Id.HasValue) 
            {
                await HrService.UpdateEmployeeAsync(newEmployee);
                NotificationService.ShowSuccess("Employee updated successfully.");
            }
            else 
            {
                await HrService.AddEmployeeAsync(newEmployee);
                NotificationService.ShowSuccess("Employee added successfully.");
            }
            showAddModal = false;
            await LoadEmployees();
        }
        catch (TauriValidationException ex)
        {
            NotificationService.ShowError(ex.Message);
        }
        catch (Exception ex) 
        { 
            NotificationService.ShowError($"Failed to save employee: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ConfirmDeleteEmployee(Employee e)
    {
        employeeToDelete = e;
        isDeleting = false;
        showDeleteModal = true;
    }

    private async Task DeleteEmployee()
    {
        if (employeeToDelete?.Id == null) return;
        isDeleting = true;
        isLoading = true;
        try 
        { 
            await HrService.DeleteEmployeeAsync(employeeToDelete.Id.Value); 
            showDeleteModal = false;
            employeeToDelete = null;
            await LoadEmployees(); 
            NotificationService.ShowSuccess("Employee deleted successfully.");
        }
        catch (TauriValidationException ex)
        {
            NotificationService.ShowError(ex.Message);
        }
        catch (Exception ex) 
        { 
            NotificationService.ShowError($"Failed to delete employee: {ex.Message}");
        }
        finally
        {
            isDeleting = false;
            isLoading = false;
        }
    }
    
    private async Task QuickDeleteEmployee(Employee e)
    {
        if (e?.Id == null) return;
        isDeleting = true;
        isLoading = true;
        try
        {
            await HrService.DeleteEmployeeAsync(e.Id.Value);
            await LoadEmployees();
            NotificationService.ShowSuccess("Employee deleted successfully.");
        }
        catch (TauriValidationException ex)
        {
            NotificationService.ShowError(ex.Message);
        }
        catch (Exception ex)
        {
            NotificationService.ShowError($"Failed to delete employee: {ex.Message}");
        }
        finally
        {
            isDeleting = false;
            isLoading = false;
        }
    }
}
