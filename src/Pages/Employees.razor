@code {
    private List<Employee>? employees;
    private bool showAddModal = false;
    private bool showDeleteModal = false;
    private bool showInviteModal = false;
    private bool isLoading = false;
    private bool isDeleting = false;
    private Employee newEmployee = new Employee();
    private Employee? employeeToDelete;
    private string searchTerm = "";
    private string viewMode = "grid";

    private string GetInitials(string name)
    {
        if (string.IsNullOrWhiteSpace(name)) return "??";
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length == 1) return parts[0].Substring(0, Math.Min(2, parts[0].Length)).ToUpper();
        return (parts[0][0].ToString() + parts[parts.Length - 1][0].ToString()).ToUpper();
    }

    private DateTime? HireDateBind
    {
        get => string.IsNullOrEmpty(newEmployee.HireDate) ? null : DateTime.TryParse(newEmployee.HireDate, out var dt) ? dt : null;
        set => newEmployee.HireDate = value?.ToString("yyyy-MM-dd");
    }

    // Invite fields
    private string inviteName = "";
    private string inviteEmail = "";
    private string inviteRole = "Employee";
    private string generatedToken = "";
    private string copyMessage = "";

    private void OpenInviteModal()
    {
        inviteName = "";
        inviteEmail = "";
        inviteRole = "Employee";
        generatedToken = "";
        copyMessage = "";
        showInviteModal = true;
    }

    private void CloseInviteModal()
    {
        showInviteModal = false;
    }

    private async Task GenerateToken()
    {
        if (string.IsNullOrWhiteSpace(inviteName) || string.IsNullOrWhiteSpace(inviteEmail) || string.IsNullOrWhiteSpace(inviteRole))
        {
            NotificationService.ShowError("All fields are required.", "Validation Error");
            return;
        }

        isLoading = true;
        try
        {
            // Pass 0 for expiration to indicate permanent token
            generatedToken = await UserService.GenerateInviteTokenAsync(inviteRole, inviteName, inviteEmail, 0);
        }
        catch (TauriValidationException ex)
        {
            NotificationService.ShowError(ex.Message);
        }
        catch (Exception ex)
        {
            NotificationService.ShowError(ex.Message, "Error");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task CopyToken()
    {
        try
        {
            if (!string.IsNullOrWhiteSpace(generatedToken))
            {
                await JSRuntime.InvokeVoidAsync("copyToClipboard", generatedToken);
                copyMessage = "Token copied to clipboard!";
                StateHasChanged();
                await Task.Delay(3000);
                copyMessage = "";
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            NotificationService.ShowError("Failed to copy token: " + ex.Message);
        }
    }

    private IEnumerable<Employee> FilteredEmployees => 
        string.IsNullOrWhiteSpace(searchTerm) 
            ? (employees ?? Enumerable.Empty<Employee>()) 
            : (employees ?? Enumerable.Empty<Employee>())
                .Where(e => (e.FirstName?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false) || 
                            (e.LastName?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
                            (e.Email?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
                            (e.Role?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false));

    private string activeTab = "employees";
    private List<Invite>? invites;

    protected override async Task OnInitializedAsync()
    {
        await LoadEmployees();
        await LoadInvites();
    }

    private async Task LoadInvites()
    {
        try 
        { 
            invites = await UserService.GetInvitesAsync(); 
        }
        catch (TauriValidationException ex)
        {
            NotificationService.ShowError(ex.Message);
            invites = new List<Invite>();
        }
        catch (Exception ex) 
        { 
            NotificationService.ShowError($"Failed to load invites: {ex.Message}");
            invites = new List<Invite>(); 
        }
    }

    private async Task ToggleInviteStatus(Invite invite)
    {
        if (invite.Id == null) return;
        try
        {
            await UserService.ToggleInviteStatusAsync(invite.Id.Value, !invite.IsActive);
            await LoadInvites();
            NotificationService.ShowSuccess($"Invite {(invite.IsActive ? "disabled" : "enabled")} successfully.");
        }
        catch (TauriValidationException ex)
        {
            NotificationService.ShowError(ex.Message);
        }
        catch (Exception ex)
        {
            NotificationService.ShowError($"Failed to update invite status: {ex.Message}");
        }
    }

    private async Task LoadEmployees()
    {
        try { employees = await HrService.GetEmployeesAsync() ?? new List<Employee>(); }
        catch (TauriValidationException ex) { NotificationService.ShowError(ex.Message); employees = new List<Employee>(); }
        catch (Exception ex) { NotificationService.ShowError($"Failed to load employees: {ex.Message}"); employees = new List<Employee>(); }
    }

    private void OpenAddModal()
    {
        newEmployee = new Employee();
        showAddModal = true;
    }

    private void EditEmployee(Employee e)
    {
        newEmployee = new Employee 
        { 
            Id = e.Id, 
            EmployeeId = e.EmployeeId,
            FirstName = e.FirstName, 
            LastName = e.LastName, 
            Email = e.Email, 
            Phone = e.Phone, 
            Role = e.Role, 
            Department = e.Department, 
            Position = e.Position, 
            ManagerId = e.ManagerId,
            HireDate = e.HireDate,
            Salary = e.Salary, 
            HourlyCost = e.HourlyCost,
            Status = e.Status 
        };
        showAddModal = true;
    }

    private async Task SaveEmployee()
    {
        isLoading = true;
        try
        {
            if (string.IsNullOrWhiteSpace(newEmployee.FirstName) || string.IsNullOrWhiteSpace(newEmployee.LastName))
            {
                NotificationService.ShowError("First Name and Last Name are required.");
                return;
            }

            if (newEmployee.Id.HasValue) 
            {
                await HrService.UpdateEmployeeAsync(newEmployee);
                NotificationService.ShowSuccess("Employee updated successfully.");
            }
            else 
            {
                await HrService.AddEmployeeAsync(newEmployee);
                NotificationService.ShowSuccess("Employee added successfully.");
            }
            showAddModal = false;
            await LoadEmployees();
        }
        catch (TauriValidationException ex)
        {
            NotificationService.ShowError(ex.Message);
        }
        catch (Exception ex) 
        { 
            NotificationService.ShowError($"Failed to save employee: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ConfirmDeleteEmployee(Employee e)
    {
        employeeToDelete = e;
        isDeleting = false;
        showDeleteModal = true;
    }

    private async Task DeleteEmployee()
    {
        if (employeeToDelete?.Id == null) return;
        isDeleting = true;
        isLoading = true;
        try 
        { 
            await HrService.DeleteEmployeeAsync(employeeToDelete.Id.Value); 
            showDeleteModal = false;
            employeeToDelete = null;
            await LoadEmployees(); 
            NotificationService.ShowSuccess("Employee deleted successfully.");
        }
        catch (TauriValidationException ex)
        {
            NotificationService.ShowError(ex.Message);
        }
        catch (Exception ex) 
        { 
            NotificationService.ShowError($"Failed to delete employee: {ex.Message}");
        }
        finally
        {
            isDeleting = false;
            isLoading = false;
        }
    }
    
    private async Task QuickDeleteEmployee(Employee e)
    {
        if (e?.Id == null) return;
        isDeleting = true;
        isLoading = true;
        try
        {
            await HrService.DeleteEmployeeAsync(e.Id.Value);
            await LoadEmployees();
            NotificationService.ShowSuccess("Employee deleted successfully.");
        }
        catch (TauriValidationException ex)
        {
            NotificationService.ShowError(ex.Message);
        }
        catch (Exception ex)
        {
            NotificationService.ShowError($"Failed to delete employee: {ex.Message}");
        }
        finally
        {
            isDeleting = false;
            isLoading = false;
        }
    }
}
