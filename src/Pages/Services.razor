@page "/services"
@attribute [Authorize(Roles = "CEO,Manager")]
@inject IBusinessConfigurationService BusinessConfigurationService
@inject NotificationService NotificationService
@inject IJSRuntime JSRuntime

<PageTitle>Services - Planning Bord</PageTitle>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <div class="px-4 py-5 sm:px-6 flex justify-between items-center">
            <div>
                <h3 class="text-lg leading-6 font-medium text-gray-900">Services Management</h3>
                <p class="mt-1 max-w-2xl text-sm text-gray-500">Manage your service offerings and pricing.</p>
            </div>
            <button @onclick="ShowAddModal" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium">
                Add Service
            </button>
        </div>

        @if (isLoading)
        {
            <div class="px-4 py-5 sm:px-6">
                <div class="flex justify-center items-center">
                    <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600"></div>
                    <span class="ml-2 text-gray-600">Loading services...</span>
                </div>
            </div>
        }
        else if (services.Count == 0)
        {
            <div class="px-4 py-5 sm:px-6 text-center">
                <p class="text-gray-500">No services found. Add your first service to get started.</p>
            </div>
        }
        else
        {
            <div class="border-t border-gray-200">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Unit Price</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                            <th scope="col" class="relative px-6 py-3"></th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var service in services)
                        {
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-medium text-gray-900">@service.Name</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-500">@service.Description</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900">$@service.UnitPrice.ToString("F2")</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @if (service.IsActive)
                                    {
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Active</span>
                                    }
                                    else
                                    {
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">Inactive</span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <button @onclick="() => EditService(service)" class="text-blue-600 hover:text-blue-900 mr-3">Edit</button>
                                    <button @onclick="() => DeleteService(service)" class="text-red-600 hover:text-red-900">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<!-- Add/Edit Modal -->
@if (showModal)
{
    <div class="fixed z-10 inset-0 overflow-y-auto">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 transition-opacity" @onclick="CloseModal">
                <div class="absolute inset-0 bg-gray-500 opacity-75"></div>
            </div>
            <span class="hidden sm:inline-block sm:align-middle sm:h-screen"></span>&#8203;
            <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">@(isEditing ? "Edit Service" : "Add Service")</h3>
                    <div class="space-y-4">
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700">Service Code</label>
                                <input @bind="currentService.ServiceCode" placeholder="SVC-001" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700">Name</label>
                                <input @bind="currentService.Name" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
                            </div>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Description</label>
                            <textarea @bind="currentService.Description" rows="2" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500"></textarea>
                        </div>
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700">Category</label>
                                <input @bind="currentService.Category" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700">Billing Type</label>
                                <select @bind="currentService.BillingType" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                                    <option value="hourly">Hourly</option>
                                    <option value="fixed">Fixed Price</option>
                                    <option value="retainer">Retainer</option>
                                </select>
                            </div>
                        </div>
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700">Unit Price / Rate</label>
                                <input @bind="currentService.UnitPrice" type="number" step="0.01" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700">Flat Price (Optional)</label>
                                <input @bind="currentService.FlatPrice" type="number" step="0.01" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
                            </div>
                        </div>
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700">Typical Duration</label>
                                <input @bind="currentService.TypicalDuration" type="number" step="0.1" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700">Duration Unit</label>
                                <select @bind="currentService.DurationUnit" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                                    <option value="hours">Hours</option>
                                    <option value="days">Days</option>
                                </select>
                            </div>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">SLA Terms</label>
                            <textarea @bind="currentService.SlaTerms" rows="2" placeholder="e.g. 24h response time, 99.9% uptime" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500"></textarea>
                        </div>
                        <div class="flex items-center">
                            <input @bind="currentService.IsActive" type="checkbox" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" />
                            <label class="ml-2 block text-sm text-gray-900">Active</label>
                        </div>
                    </div>
                </div>
                <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                    <button @onclick="SaveService" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-blue-600 text-base font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 sm:ml-3 sm:w-auto sm:text-sm">
                        Save
                    </button>
                    <button @onclick="CloseModal" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Service> services = new();
    private bool isLoading = true;
    private bool showModal = false;
    private bool isEditing = false;
    private Service currentService = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadServices();
    }

    private async Task LoadServices()
    {
        isLoading = true;
        try
        {
            services = await BusinessConfigurationService.GetServicesAsync();
        }
        catch (Exception ex)
        {
            NotificationService.ShowError($"Failed to load services: {ex.Message}", "Error");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowAddModal()
    {
        currentService = new Service { 
            IsActive = true,
            UnitPrice = 50.0,
            Category = "General",
            BillingType = "hourly"
        };
        isEditing = false;
        showModal = true;
    }

    private void EditService(Service service)
    {
        currentService = new Service
        {
            Id = service.Id,
            ServiceCode = service.ServiceCode,
            Name = service.Name,
            Description = service.Description,
            UnitPrice = service.UnitPrice,
            FlatPrice = service.FlatPrice,
            Category = service.Category,
            BillingType = service.BillingType,
            EstimatedHours = service.EstimatedHours,
            TypicalDuration = service.TypicalDuration,
            DurationUnit = service.DurationUnit,
            SlaTerms = service.SlaTerms,
            IsActive = service.IsActive
        };
        isEditing = true;
        showModal = true;
    }

    private async Task SaveService()
    {
        try
        {
            if (isEditing)
            {
                await BusinessConfigurationService.UpdateServiceAsync(currentService);
                NotificationService.ShowSuccess("Service updated successfully", "Success");
            }
            else
            {
                await BusinessConfigurationService.AddServiceAsync(currentService);
                NotificationService.ShowSuccess("Service added successfully", "Success");
            }
            await LoadServices();
            CloseModal();
        }
        catch (Exception ex)
        {
            NotificationService.ShowError($"Failed to save service: {ex.Message}", "Error");
        }
    }

    private async Task DeleteService(Service service)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete '{service.Name}'?"))
        {
            try
            {
                await BusinessConfigurationService.DeleteServiceAsync(service.Id ?? 0);
                NotificationService.ShowSuccess("Service deleted successfully", "Success");
                await LoadServices();
            }
            catch (Exception ex)
            {
                NotificationService.ShowError($"Failed to delete service: {ex.Message}", "Error");
            }
        }
    }

    private void CloseModal()
    {
        showModal = false;
        currentService = new Service();
    }
}