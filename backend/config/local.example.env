# Local Server Configuration Example
# Copy this file to local.env and update with your actual values

# Server Configuration
BACKEND_HOST=localhost
BACKEND_PORT=8000
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Database Configuration (Local SQLite)
DATABASE_URL=sqlite:///./planning_bord.db
DATABASE_TYPE=sqlite

# Security
SECRET_KEY=your-local-secret-key-here-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration (Allow local frontend)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://127.0.0.1:3000"]

# Offline Mode Configuration
OFFLINE_MODE=true
SYNC_INTERVAL_MINUTES=60
CLOUD_SYNC_URL=

# Microsoft 365 Configuration (Optional for local)
MS_CLIENT_ID=
MS_CLIENT_SECRET=
MS_TENANT_ID=common
MS_REDIRECT_URI=http://localhost:8000/api/microsoft/callback

# File Storage (Local File System)
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./uploads

# Email Configuration (Local SMTP or disabled)
EMAIL_PROVIDER=local
SMTP_SERVER=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_TLS=true

# Development Features
ENABLE_SWAGGER=true
ENABLE_DEBUG_ENDPOINTS=true
HOT_RELOAD=true

# Backup Configuration (Local)
ENABLE_AUTOMATIC_BACKUP=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
LOCAL_BACKUP_PATH=./backups