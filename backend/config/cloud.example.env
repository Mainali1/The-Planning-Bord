# Cloud Server Configuration Example
# Copy this file to cloud.env and update with your actual values

# Server Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration (Cloud Database)
DATABASE_URL=postgresql://username:password@your-cloud-db-host:5432/planning_bord_db
DATABASE_TYPE=postgresql

# Security
SECRET_KEY=your-super-secret-key-here-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=["https://your-frontend-domain.com", "https://app.your-domain.com"]

# Offline Mode Configuration
OFFLINE_MODE=false
SYNC_INTERVAL_MINUTES=5
CLOUD_SYNC_URL=https://your-cloud-sync-endpoint.com/api/sync

# Microsoft 365 Configuration
MS_CLIENT_ID=your-microsoft-client-id
MS_CLIENT_SECRET=your-microsoft-client-secret
MS_TENANT_ID=your-microsoft-tenant-id
MS_REDIRECT_URI=https://your-backend-domain.com/api/microsoft/callback

# File Storage (Cloud Storage)
STORAGE_TYPE=cloud
CLOUD_STORAGE_BUCKET=your-cloud-storage-bucket
CLOUD_STORAGE_REGION=us-east-1

# Email Configuration (Cloud Email Service)
EMAIL_PROVIDER=cloud
EMAIL_API_KEY=your-cloud-email-api-key
EMAIL_DOMAIN=your-domain.com

# Monitoring & Analytics
ENABLE_MONITORING=true
MONITORING_SERVICE=datadog
MONITORING_API_KEY=your-monitoring-api-key

# Backup Configuration
ENABLE_AUTOMATIC_BACKUP=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
CLOUD_BACKUP_BUCKET=your-backup-bucket