{
  "name": "planning-bord-backend",
  "version": "1.0.0",
  "description": "Backend API for The Planning Bord - Business Management Software",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration --coverage",
    "test:unit": "jest --testPathPattern=unit --coverage",
    "migrate": "node migrate.js migrate",
    "migrate:rollback": "node migrate.js rollback",
    "migrate:status": "knex migrate:status",
    "migrate:make": "knex migrate:make",
    "seed": "knex seed:run",
    "seed:make": "knex seed:make",
    "db:setup": "node migrate.js migrate && npm run seed",
    "db:reset": "node migrate.js rollback && npm run migrate",
    "test:setup": "node testFixtures.js setup",
    "test:cleanup": "node testFixtures.js cleanup",
    "test:scenario": "node testFixtures.js scenario",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write src/**/*.js",
    "format:check": "prettier --check src/**/*.js",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "security:check": "npm audit && npm run lint",
    "docker:build": "docker build -t planning-bord-backend .",
    "docker:run": "docker run -p 5000:5000 --env-file .env planning-bord-backend",
    "prepare": "cd .. && husky install backend/.husky",
    "postinstall": "husky install",
    "worker:email": "node src/workers/emailWorker.js",
    "worker:inventory": "node src/workers/inventoryWorker.js",
    "worker:report": "node src/workers/reportWorker.js",
    "worker:file": "node src/workers/fileWorker.js",
    "workers:start": "pm2 start ../ecosystem.config.js",
    "workers:stop": "pm2 stop ../ecosystem.config.js",
    "workers:restart": "pm2 restart ../ecosystem.config.js",
    "workers:logs": "pm2 logs",
    "redis:up": "docker-compose -f ../docker-compose.redis.yml up -d",
    "redis:down": "docker-compose -f ../docker-compose.redis.yml down",
    "redis:logs": "docker logs planning-bord-redis"
  },
  "dependencies": {
    "@azure/msal-node": "^2.16.3",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "g": "^2.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^2.5.1",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.4",
    "pg": "^8.11.3",
    "bull": "^4.12.2",
    "redis": "^4.6.10",
    "@bull-board/api": "^5.9.1",
    "@bull-board/express": "^5.9.1",
    "csv-parser": "^3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "eslint": "^8.45.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^9.1.7",
    "jest": "^29.6.2",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3",
    "winston": "^3.11.0",
    "uuid": "^9.0.1",
    "@sentry/node": "^7.88.0",
    "@sentry/profiling-node": "^1.3.2",
    "pm2": "^5.3.0"
  },
  "keywords": [
    "business-management",
    "inventory",
    "employee-management",
    "planning-bord"
  ],
  "author": "Planning Bord Team",
  "license": "SEE LICENSE IN ../EULA.md"
}
