# Frontend Environment Variables
# Copy this file to .env and fill in your actual values

# Application Configuration
REACT_APP_API_URL=http://localhost:5000
REACT_APP_ENVIRONMENT=development

# Microsoft Graph API Configuration
REACT_APP_MICROSOFT_CLIENT_ID=your_microsoft_client_id_here
REACT_APP_MICROSOFT_AUTH_ENDPOINT=https://login.microsoftonline.com/common/oauth2/v2.0/authorize
REACT_APP_MICROSOFT_SCOPES=user.read,mail.read,calendars.read

# Google Maps API (if using)
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Analytics (if using)
REACT_APP_GOOGLE_ANALYTICS_ID=your_google_analytics_id_here

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG_MODE=true

# Build Configuration
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false

# Security Configuration
REACT_APP_ENABLE_CSP=true
REACT_APP_CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'