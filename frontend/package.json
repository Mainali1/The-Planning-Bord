{
  "name": "the-planning-bord-desktop",
  "version": "1.0.0",
  "description": "Desktop Business Management Software",
  "main": "src/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:renderer\" \"npm run dev:frontend\"",
    "dev:backend": "cd ../backend && python main.py",
    "dev:renderer": "cd src/renderer && npm run dev",
    "dev:frontend": "set NODE_ENV=development && electron . --dev",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "cd src/renderer && npm run build",
    "build:electron": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "business",
    "management",
    "inventory",
    "employee",
    "desktop",
    "electron"
  ],
  "author": "Planning Bord Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.1.3",
    "electron-builder": "^24.8.1",
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "electron-log": "^5.0.1",
    "electron-updater": "^6.1.7",
    "node-notifier": "^10.0.1"
  },
  "build": {
    "appId": "com.planningbord.desktop",
    "productName": "The Planning Bord",
    "directories": {
      "output": "../desktop-build"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!__pycache__",
          "!*.pyc",
          "!logs"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "The Planning Bord",
      "uninstallDisplayName": "The Planning Bord Business Management Software",
      "license": "LICENSE",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "include": "installer.nsh",
      "script": "installer.nsh"
    }
  }
}
